<nav class="text-sm breadcrumbs mb-4">
  <ol class="flex flex-wrap">
    <li class="breadcrumb-item">
      <%= link_to "Home", root_path, class: "text-gray-500 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400" %>
      <span class="mx-2 text-gray-500 dark:text-gray-400">/</span>
    </li>
    <li class="breadcrumb-item">
      <%= link_to "Shop", products_path, class: "text-gray-500 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400" %>
      <span class="mx-2 text-gray-500 dark:text-gray-400">/</span>
    </li>
    <% if ancestors.present? %>
      <% ancestors.each do |ancestor| %>
        <li class="breadcrumb-item">
          <%= link_to ancestor.name, category_path(ancestor), class: "text-gray-500 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-400" %>
          <span class="mx-2 text-gray-500 dark:text-gray-400">/</span>
        </li>
      <% end %>
    <% end %>
    <li class="breadcrumb-item active">
      <span class="text-gray-800 dark:text-white"><%= category.name %></span>
    </li>
  </ol>
</nav>