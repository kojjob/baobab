<div class="min-h-screen bg-gradient-to-br from-green-400 via-blue-500 to-purple-600 flex items-center justify-center px-4 py-28">
  <div class="bg-white shadow-2xl rounded-xl overflow-hidden w-full max-w-md">
    <turbo-frame id="signup-frame">
      <div class="p-8">
        <div class="text-center mb-8">
          <svg class="mx-auto h-16 w-16 text-green-600" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 4c1.93 0 3.5 1.57 3.5 3.5S13.93 13 12 13s-3.5-1.57-3.5-3.5S10.07 6 12 6zm0 14c-2.74 0-5.14-1.39-6.5-3.5C6.86 14.5 9.26 13 12 13s5.14 1.39 6.5 3.5C17.14 18.61 14.74 20 12 20z"/>
          </svg>
          <h2 class="mt-4 text-3xl font-extrabold text-gray-900">
            Create Your Account
          </h2>
          <p class="mt-2 text-sm text-gray-600">
            Start your journey with us today
          </p>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
                     data: { turbo_frame: "signup-frame", turbo_action: "replace" }) do |f| %>
          <div class="space-y-4">
            <div>
              <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_field :name, 
                  autofocus: true, 
                  required: true, 
                  placeholder: "John Doe",
                  class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500" %>
            </div>

            <div>
              <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
              <%= f.email_field :email, 
                  required: true, 
                  placeholder: "you@example.com",
                  class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500" %>
            </div>

            <div>
              <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
              <%= f.password_field :password, 
                  autocomplete: "new-password", 
                  required: true,
                  placeholder: "At least 12 characters",
                  class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500" %>
              <p class="mt-1 text-xs text-gray-500">
                Must include uppercase, lowercase, number, and special character
              </p>
            </div>

            <div>
              <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
              <%= f.password_field :password_confirmation, 
                  autocomplete: "new-password", 
                  required: true,
                  placeholder: "Repeat your password",
                  class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500" %>
            </div>

            <div class="flex items-center">
              <%= f.check_box :terms_of_service, 
                  class: "h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded" %>
              <%= f.label :terms_of_service, class: "ml-2 block text-sm text-gray-900" do %>
                I agree to the 
                <%= link_to "Terms of Service", "#", class: "text-green-600 hover:underline" %> 
                and 
                <%= link_to "Privacy Policy", "#", class: "text-green-600 hover:underline" %>
              <% end %>
            </div>

            <div>
              <%= f.submit "Create Account", 
                  class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
            </div>
          </div>
        <% end %>

        <div class="mt-6">
          <div class="relative">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-gray-300"></div>
            </div>
            <div class="relative flex justify-center text-sm">
              <span class="px-2 bg-white text-gray-500">
                Or sign up with
              </span>
            </div>
          </div>

          <div class="mt-6 grid grid-cols-3 gap-3">
            <%= link_to "#", class: "w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm3 8h-1.35c-.538 0-.65.221-.65.778v1.222h2l-.209 2h-1.791v7h-3v-7h-2v-2h2v-2.308c0-1.769.931-2.692 3.029-2.692h1.971v3z"/>
              </svg>
            <% end %>

            <%= link_to "#", class: "w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            <% end %>

            <%= link_to "#", class: "w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M7 11v2.4h3.97c-.16 1.029-1.2 3.02-3.97 3.02-2.39 0-4.34-1.979-4.34-4.42 0-2.44 1.95-4.42 4.34-4.42 1.36 0 2.27.58 2.79 1.08l1.9-1.83c-1.22-1.14-2.8-1.83-4.69-1.83-3.87 0-7 3.13-7 7s3.13 7 7 7c4.04 0 6.721-2.84 6.721-6.84 0-.46-.051-.81-.111-1.16h-6.61zm0 0 17 2h-3v3h-2v-3h-3v-2h3v-3h2v3h3v2z"/>
              </svg>
            <% end %>
          </div>
        </div>

        <div class="mt-6 text-center">
          <p class="text-sm text-gray-600">
            Already have an account? 
            <%= link_to "Sign in", 
                new_session_path(resource_name), 
                class: "font-medium text-green-600 hover:text-green-500" %>
          </p>
        </div>
      </div>
    </turbo-frame>
  </div>
</div>
