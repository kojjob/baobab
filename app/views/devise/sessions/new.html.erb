<div class="min-h-screen flex flex-col lg:flex-row bg-gray-50">
  <%# Left Side - Dynamic Background %>
  <div class="relative lg:w-1/2 bg-gradient-to-br from-green-400 via-blue-500 to-purple-600 overflow-hidden lg:block hidden">
    <%# Animated Gradient Overlay %>
    <div class="absolute inset-0 bg-gradient-to-tr from-transparent via-white/10 to-transparent animate-gradient-shift"></div>
    
    <%# Floating Geometric Elements %>
    <div class="absolute top-10 left-10 w-24 h-24 bg-white/20 rounded-full animate-float"></div>
    <div class="absolute bottom-20 right-20 w-32 h-32 bg-white/20 rounded-full animate-float-slower"></div>
    
    <%# Content Overlay with Modern Typography %>
    <div class="absolute inset-0 flex flex-col justify-center items-start p-12 lg:p-16 text-white space-y-6">
      <div class="max-w-md">
        <h1 class="text-4xl lg:text-5xl font-extrabold mb-4 leading-tight tracking-tight">
          Welcome to <br><span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 via-green-300 to-green-500">Supper Ghana</span>
        </h1>
        <p class="text-lg lg:text-xl mb-6 text-gray-100 leading-relaxed">
          Your all-in-one digital companion for seamless transactions, food ordering, and community connection.
        </p>
      </div>
      
      <%# Animated Feature Highlights %>
      <div class="space-y-4 w-full max-w-md">
        <% features = [
          { icon: 'restaurant', text: 'Discover Local Restaurants', color: 'yellow' },
          { icon: 'mobile-money', text: 'Seamless Mobile Money', color: 'green' },
          { icon: 'delivery', text: 'Nationwide Delivery', color: 'blue' }
        ] %>
        
        <% features.each do |feature| %>
          <div class="flex items-center space-x-4 transform transition duration-300 hover:translate-x-2 hover:scale-105">
            <div class="w-12 h-12 rounded-full bg-white/20 flex items-center justify-center">
              <svg class="w-6 h-6 text-<%= feature[:color] %>-400" fill="currentColor" viewBox="0 0 24 24">
                <% case feature[:icon] %>
                <% when 'restaurant' %>
                  <path d="M11 9H9V2l2 2V9zm4 0h-2V2l2 2V9zm4 8v-5l-4-4V3c0-.55-.45-1-1-1H6c-.55 0-1 .45-1 1v9l-4 4v2h20v-2l-4-4zm-6 3v-2H5v2H3v-4l4-4V5h6v5l4 4v4h-2z"/>
                <% when 'mobile-money' %>
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"/>
                <% when 'delivery' %>
                  <path d="M20 8h-3V4H3c-1.1 0-2 .9-2 2v11h2c0 1.66 1.34 3 3 3s3-1.34 3-3h6c0 1.66 1.34 3 3 3s3-1.34 3-3h2v-5l-3-4zM6 18.5c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zm13.5-9l1.5 2h-4V9.5h2.5zm-1.5 9c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5z"/>
                <% end %>
              </svg>
            </div>
            <span class="text-sm lg:text-base text-white/90"><%= feature[:text] %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <%# Right Side - Login Form with Enhanced Design %>
  <div class="w-full lg:w-1/2 flex items-center justify-center px-4 py-12 lg:px-16 bg-white shadow-lg lg:shadow-none">
    <div class="w-full max-w-md space-y-8">
      <%# Animated Header %>
      <div class="text-center">
        <div class="flex justify-center mb-6">
          <div class="w-16 h-16 bg-gradient-to-br from-green-400 to-blue-500 rounded-full flex items-center justify-center">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm3.5-8c0 1.93-1.57 3.5-3.5 3.5S8.5 13.93 8.5 12 10.07 8.5 12 8.5s3.5 1.57 3.5 3.5z"/>
            </svg>
          </div>
        </div>
        <h2 class="text-3xl font-extrabold text-gray-900 tracking-tight">
          Sign in to Supper Ghana
        </h2>
        <p class="mt-2 text-sm text-gray-600">
          Connecting Ghana, one tap at a time
        </p>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), 
                   html: { class: "space-y-6", data: { turbo: false } }) do |f| %>
        <div class="space-y-4">
          <div>
            <%= f.label :email, "Email address", class: "block text-sm font-medium text-gray-700 mb-1" %>
            <%= f.email_field :email, 
                autofocus: true, 
                required: true, 
                placeholder: "you@example.com",
                class: "block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm 
                       focus:ring-2 focus:ring-green-500 focus:border-green-500 
                       transition duration-300 ease-in-out 
                       hover:border-green-400" %>
          </div>
          
          <div>
            <div class="flex justify-between items-center mb-1">
              <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
              <%= link_to "Forgot password?", 
                  new_password_path(resource_name), 
                  class: "text-sm text-green-600 hover:text-green-500 font-medium" %>
            </div>
            <%= f.password_field :password, 
                autocomplete: "current-password", 
                required: true, 
                placeholder: "Enter your password",
                class: "block w-full px-4 py-3 border border-gray-300 rounded-md shadow-sm 
                       focus:ring-2 focus:ring-green-500 focus:border-green-500 
                       transition duration-300 ease-in-out 
                       hover:border-green-400" %>
          </div>
        </div>

        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <%= f.check_box :remember_me, 
                class: "h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded 
                        transition duration-300 ease-in-out" %>
            <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" do %>
              Remember me
            <% end %>
          </div>
        </div>

        <%= f.submit "Sign In", 
            class: "w-full flex justify-center py-3 px-4 border border-transparent 
                   rounded-md shadow-sm text-sm font-semibold text-white 
                   bg-gradient-to-r from-green-500 to-blue-600 
                   hover:from-green-600 hover:to-blue-700 
                   focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 
                   transform transition duration-300 hover:scale-105 active:scale-95" do %>
          Sign In
        <% end %>
      <% end %>

      <%# Social Login Section %>
      <div>
        <div class="relative my-6">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center">
            <span class="px-4 bg-white text-sm text-gray-500">
              Or continue with
            </span>
          </div>
        </div>

        <div class="grid grid-cols-3 gap-3">
          <% social_logins = [
            { name: 'Facebook', icon: 'M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm3 8h-1.35c-.538 0-.65.221-.65.778v1.222h2l-.209 2h-1.791v7h-3v-7h-2v-2h2v-2.308c0-1.769.931-2.692 3.029-2.692h1.971v3z' },
            { name: 'Google', icon: 'M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z' },
            { name: 'Twitter', icon: 'M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm6.066 9.645c.183 4.04-2.83 8.544-8.164 8.544-1.622 0-3.131-.476-4.402-1.291 1.524.18 3.045-.244 4.252-1.189-1.256-.023-2.317-.854-2.684-1.995.451.086.895.061 1.298-.049-1.381-.278-2.335-1.522-2.304-2.853.388.215.83.344 1.301.359-1.279-.86-1.637-2.56-.884-3.85 1.414 1.738 3.527 2.879 5.91 3-.419-1.796.944-3.527 2.799-3.527.825 0 1.572.349 2.096.907.654-.128 1.27-.367 1.824-.697-.215.671-.67 1.233-1.263 1.589.581-.07 1.135-.224 1.649-.453-.384.578-.87 1.084-1.433 1.489v.333c0 3.41-2.951 6.582-7.431 6.582-1.477 0-2.851-.434-4.004-1.178 1.102.135 2.209-.183 3.082-.884-1.07-.02-1.973-.73-2.283-1.706.382.074.776.052 1.146-.04-1.191-.24-2.013-1.301-1.991-2.464.332.184.708.292 1.111.305-1.007-.676-1.647-1.963-1.647-3.358 0-.739.202-1.434.555-2.03 1.288 1.581 3.213 2.616 5.386 2.72-.066-.284-.1-.579-.1-.881 0-1.805 1.463-3.268 3.268-3.268.939 0 1.788.398 2.383 1.037.741-.146 1.44-.42 2.072-.797-.243.758-.758 1.395-1.427 1.795.656-.079 1.28-.256 1.861-.517-.384.578-.87 1.084-1.433 1.489v.333c0 3.41-2.951 6.582-7.431 6.582-1.477 0-2.851-.434-4.004-1.178 1.102.135 2.209-.183 3.082-.884-1.07-.02-1.973-.73-2.283-1.706.382.074.776.052 1.146-.04-1.191-.24-2.013-1.301-1.991-2.464.332.184.708.292 1.111.305-1.007-.676-1.647-1.963-1.647-3.358 0-.739.202-1.434.555-2.03 1.288 1.581 3.213 2.616 5.386 2.72-.066-.284-.1-.579-.1-.881 0-1.805 1.463-3.268 3.268-3.268.939 0 1.788.398 2.383 1.037.741-.146 1.44-.42 2.072-.797-.243.758-.758 1.395-1.427 1.795.656-.079 1.28-.256 1.861-.517z' }
          ] %>
          <% social_logins.each do |login| %>
            <%= link_to "#", 
                class: "inline-flex justify-center py-3 px-4 border border-gray-300 
                       rounded-md shadow-sm bg-white text-sm font-medium 
                       text-gray-500 hover:bg-gray-50 
                       transform transition duration-300 hover:scale-105 active:scale-95", 
                data: { turbo: false } do %>
              <span class="sr-only"><%= login[:name] %></span>
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="<%= login[:icon] %>"/>
              </svg>
            <% end %>
          <% end %>
        </div>

        <%# Sign Up Prompt %>
        <div class="mt-6 text-center">
          <p class="text-sm text-gray-600">
            Don't have an account? 
            <%= link_to "Sign up", 
                new_registration_path(resource_name), 
                class: "font-medium text-green-600 hover:text-green-500 
                        transition duration-300 hover:underline" %>
          </p>
        </div>
      </div>

      <%# Mobile Responsive Background %>
      <div class="lg:hidden absolute inset-0 bg-gradient-to-br from-green-400 via-blue-500 to-purple-600 
                  opacity-10 -z-10"></div>
    </div>
  </div>
</div>