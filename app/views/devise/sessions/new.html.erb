<%# app/views/users/sessions/new.html.erb %>
<div class="min-h-screen flex">
  <%# Left Side - Background with Gradient and Overlay %>
  <div class="hidden lg:block lg:w-1/2 relative bg-gradient-to-br from-green-400 via-blue-500 to-purple-600 overflow-hidden">
    <%# Animated Gradient Overlay %>
    <div class="absolute inset-0 bg-gradient-to-tr from-transparent via-white/10 to-transparent animate-gradient-shift"></div>
    
    <%# Floating Elements %>
    <div class="absolute top-10 left-10 w-24 h-24 bg-white/20 rounded-full animate-float"></div>
    <div class="absolute bottom-20 right-20 w-32 h-32 bg-white/20 rounded-full animate-float-slower"></div>
    
    <%# Content Overlay %>
    <div class="absolute inset-0 flex flex-col justify-center items-start p-16 text-white">
      <h1 class="text-5xl font-bold mb-6 leading-tight">
        Welcome to <br>Supper Ghana
      </h1>
      <p class="text-xl mb-8 max-w-md">
        Connect, order, and experience the vibrant flavors of Ghana right at your fingertips.
      </p>
      
      <%# Feature Highlights %>
      <div class="space-y-4">
        <div class="flex items-center space-x-3">
          <svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
          <span>Discover Local Restaurants</span>
        </div>
        <div class="flex items-center space-x-3">
          <svg class="w-6 h-6 text-green-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm3.5-8c0 1.93-1.57 3.5-3.5 3.5S8.5 13.93 8.5 12 10.07 8.5 12 8.5s3.5 1.57 3.5 3.5z"/>
          </svg>
          <span>Easy Mobile Money Integration</span>
        </div>
        <div class="flex items-center space-x-3">
          <svg class="w-6 h-6 text-blue-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M16 6l2.29 2.29-4.88 4.88-4-4L2 16.59 3.41 18l6-6 4 4 6.3-6.29L22 12V6z"/>
          </svg>
          <span>Fast Delivery Nationwide</span>
        </div>
      </div>
    </div>
  </div>
  
  <%# Right Side - Login Form %>
  <div class="w-full lg:w-1/2 flex items-center justify-center px-6 py-12 lg:px-16">
    <div class="w-full max-w-md space-y-8">
      <div>
        <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
          Sign in to Supper Ghana
        </h2>
        <p class="mt-2 text-sm text-gray-600">
          Order your favorite local dishes with ease
        </p>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), 
                   html: { class: "mt-8 space-y-6" }) do |f| %>
        <div class="rounded-md shadow-sm -space-y-px">
          <div>
            <%= f.label :email, class: "sr-only" %>
            <%= f.email_field :email, 
                autofocus: true, 
                required: true, 
                placeholder: "Email address",
                class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-green-500 focus:border-green-500 focus:z-10 sm:text-sm" %>
          </div>
          <div>
            <%= f.label :password, class: "sr-only" %>
            <%= f.password_field :password, 
                autocomplete: "current-password", 
                required: true, 
                placeholder: "Password",
                class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-green-500 focus:border-green-500 focus:z-10 sm:text-sm" %>
          </div>
        </div>

        <div class="flex items-center justify-between">
          <div class="flex items-center">
            <%= f.check_box :remember_me, 
                class: "h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded" %>
            <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" do %>
              Remember me
            <% end %>
          </div>

          <%= link_to "Forgot password?", 
              new_password_path(resource_name), 
              class: "text-sm text-green-600 hover:text-green-500" %>
        </div>

        <div>
          <%= f.submit "Sign In", 
              class: "group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-gradient-to-r from-green-500 to-blue-600 hover:from-green-600 hover:to-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
            <span class="absolute left-0 inset-y-0 flex items-center pl-3">
              <svg class="h-5 w-5 text-green-300 group-hover:text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
              </svg>
            </span>
            Sign in
          <% end %>
        </div>
      <% end %>

      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-gray-500">
              Or continue with
            </span>
          </div>
        </div>

        <div class="mt-6 grid grid-cols-3 gap-3">
          <%= link_to "#", class: "w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
            <span class="sr-only">Facebook</span>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm3 8h-1.35c-.538 0-.65.221-.65.778v1.222h2l-.209 2h-1.791v7h-3v-7h-2v-2h2v-2.308c0-1.769.931-2.692 3.029-2.692h1.971v3z"/>
            </svg>
          <% end %>

          <%= link_to "#", class: "w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
            <span class="sr-only">Google</span>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          <% end %>

          <%= link_to "#", class: "w-full inline-flex justify-center py-2 px-4 border border-gray-300 rounded-md shadow-sm bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
            <span class="sr-only">Twitter</span>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.627 0-12 5.373-12 12s5.373 12 12 12 12-5.373 12-12-5.373-12-12-12zm6.066 9.645c.183 4.04-2.83 8.544-8.164 8.544-1.622 0-3.131-.476-4.402-1.291 1.524.18 3.045-.244 4.252-1.189-1.256-.023-2.317-.854-2.684-1.995.451.086.895.061 1.298-.049-1.381-.278-2.335-1.522-2.304-2.853.388.215.83.344 1.301.359-1.279-.86-1.637-2.56-.884-3.85 1.414 1.738 3.527 2.879 5.91 3 -.419-1.796.944-3.527 2.799-3.527.825 0 1.572.349 2.096.907.654-.128 1.27-.367 1.824-.697-.215.671-.67 1.233-1.263 1.589.581-.07 1.135-.224 1.649-.453-.384.578-.87 1.084-1.433 1.489v.333c0 3.41-2.951 6.582-7.431 6.582-1.477 0-2.851-.434-4.004-1.178 1.102.135 2.209-.183 3.082-.884-1.07-.02-1.973-.73-2.283-1.706.382.074.776.052 1.146-.04-1.191-.24-2.013-1.301-1.991-2.464.332.184.708.292 1.111.305-1.007-.676-1.647-1.963-1.647-3.358 0-.739.202-1.434.555-2.03 1.288 1.581 3.213 2.616 5.386 2.72-.066-.284-.1-.579-.1-.881 0-1.805 1.463-3.268 3.268-3.268.939 0 1.788.398 2.383 1.037.741-.146 1.44-.42 2.072-.797-.243.758-.758 1.395-1.427 1.795.656-.079 1.28-.256 1.861-.517-.433.647-1.981 1.883-1.981 1.883z"/>
            </svg>
          <% end %>
        </div>

        <div class="mt-6 text-center">
          <p class="text-sm text-gray-600">
            Don't have an account? 
            <%= link_to "Sign up", 
                new_registration_path(resource_name), 
                class: "font-medium text-green-600 hover:text-green-500" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

