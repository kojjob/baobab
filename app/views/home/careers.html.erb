<%# Careers page for Supper Ghana app %>
<% content_for :title, "Careers - Join the Supper Ghana Team" %>

<!-- Hero Section -->
<section class="relative bg-gradient-to-br from-green-700 via-yellow-600 to-red-700 overflow-hidden">
  <!-- Background pattern -->
  <div class="absolute inset-0 pattern-adinkra opacity-10"></div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-24">
    <div class="text-center mb-10">
      <h1 class="text-4xl sm:text-5xl font-extrabold text-white leading-tight tracking-tight drop-shadow-md">
        Join Our Team<span class="text-yellow-300">.</span>
      </h1>
      <p class="mt-4 text-xl text-white/90 max-w-3xl mx-auto">
        Build Ghana's digital future with us. Discover exciting career opportunities at Supper Ghana.
      </p>
      <div class="mt-8 flex justify-center">
        <a href="#open-positions" class="px-8 py-4 bg-white/10 backdrop-blur-sm text-white border-2 border-white/30 rounded-full font-semibold hover:bg-white/20 transition duration-300 text-lg">
          View Open Positions
        </a>
      </div>
    </div>
    
    <!-- Stats highlight -->
    <div class="mt-16 grid grid-cols-2 sm:grid-cols-4 gap-8">
      <div class="text-center">
        <p class="text-3xl sm:text-4xl font-bold text-white">120+</p>
        <p class="mt-2 text-white/80">Team Members</p>
      </div>
      <div class="text-center">
        <p class="text-3xl sm:text-4xl font-bold text-white">6</p>
        <p class="mt-2 text-white/80">Office Locations</p>
      </div>
      <div class="text-center">
        <p class="text-3xl sm:text-4xl font-bold text-white">2M+</p>
        <p class="mt-2 text-white/80">App Users</p>
      </div>
      <div class="text-center">
        <p class="text-3xl sm:text-4xl font-bold text-white">40%</p>
        <p class="mt-2 text-white/80">Annual Growth</p>
      </div>
    </div>
  </div>
  
  <!-- Wave separator -->
  <div class="absolute bottom-0 left-0 right-0">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 120" class="w-full h-auto fill-white dark:fill-gray-900">
      <path d="M0,64L80,69.3C160,75,320,85,480,80C640,75,800,53,960,42.7C1120,32,1280,32,1360,32L1440,32L1440,120L1360,120C1280,120,1120,120,960,120C800,120,640,120,480,120C320,120,160,120,80,120L0,120Z"></path>
    </svg>
  </div>
</section>

<!-- Our Culture Section -->
<section class="py-16 bg-white dark:bg-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="lg:flex lg:items-center lg:space-x-16">
      <!-- Left column image placeholder -->
      <div class="lg:w-1/2 mb-10 lg:mb-0">
        <div class="aspect-w-4 aspect-h-3 rounded-2xl overflow-hidden shadow-xl">
          <!-- Ghana-themed SVG illustration of team working together -->
          <div class="w-full h-full bg-gradient-to-br from-green-100 to-yellow-100 dark:from-green-900 dark:to-yellow-900 relative">
            <!-- Abstract office layout -->
            <svg xmlns="http://www.w3.org/2000/svg" class="absolute inset-0 w-full h-full" viewBox="0 0 800 600">
              <!-- Office background -->
              <rect x="0" y="0" width="800" height="600" fill="none" />
              
              <!-- Office furniture and elements in Ghana colors -->
              <rect x="100" y="150" width="600" height="300" rx="10" fill="#F0FDF4" class="dark:fill-gray-800" />
              <rect x="150" y="200" width="200" height="150" rx="5" fill="#DCFCE7" class="dark:fill-gray-700" />
              <rect x="400" y="200" width="250" height="150" rx="5" fill="#DCFCE7" class="dark:fill-gray-700" />
              
              <!-- Team figures - stylized in Ghana flag colors -->
              <circle cx="250" cy="275" r="30" fill="#E11D48" /> <!-- Red person -->
              <circle cx="320" cy="275" r="30" fill="#EAB308" /> <!-- Yellow person -->
              <circle cx="390" cy="275" r="30" fill="#16A34A" /> <!-- Green person -->
              <circle cx="460" cy="275" r="30" fill="#E11D48" /> <!-- Red person -->
              <circle cx="530" cy="275" r="30" fill="#EAB308" /> <!-- Yellow person -->
              
              <!-- Decorative elements -->
              <rect x="150" y="400" width="500" height="20" rx="10" fill="#DCFCE7" class="dark:fill-gray-700" />
              <circle cx="200" cy="450" r="20" fill="#16A34A" />
              <circle cx="600" cy="450" r="20" fill="#E11D48" />
            </svg>
            
            <!-- Text overlay -->
            <div class="absolute bottom-6 right-6 bg-white/80 dark:bg-gray-900/80 backdrop-blur-sm p-4 rounded-lg shadow-lg">
              <div class="text-sm font-medium text-green-800 dark:text-green-400">Supper Ghana</div>
              <div class="text-xs text-gray-600 dark:text-gray-300">Team Collaboration</div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Right column content -->
      <div class="lg:w-1/2">
        <div class="space-y-6">
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white">Our Culture & Values</h2>
          <p class="text-xl text-gray-600 dark:text-gray-300">
            At Supper Ghana, we're building technology that makes everyday life better for Ghanaians. Our culture is founded on innovation, collaboration, and respect for our rich Ghanaian heritage.
          </p>
          
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mt-8">
            <!-- Value 1 -->
            <div class="flex">
              <div class="flex-shrink-0">
                <div class="flex items-center justify-center h-12 w-12 rounded-md bg-green-500 text-white">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">Innovation</h3>
                <p class="mt-2 text-gray-600 dark:text-gray-300">
                  We're constantly exploring new ideas and solutions that push boundaries and create meaningful impact.
                </p>
              </div>
            </div>
            
            <!-- Value 2 -->
            <div class="flex">
              <div class="flex-shrink-0">
                <div class="flex items-center justify-center h-12 w-12 rounded-md bg-yellow-500 text-white">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">Community</h3>
                <p class="mt-2 text-gray-600 dark:text-gray-300">
                  We believe in building technology that strengthens connections and supports local communities.
                </p>
              </div>
            </div>
            
            <!-- Value 3 -->
            <div class="flex">
              <div class="flex-shrink-0">
                <div class="flex items-center justify-center h-12 w-12 rounded-md bg-red-500 text-white">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">Integrity</h3>
                <p class="mt-2 text-gray-600 dark:text-gray-300">
                  We operate with transparency, honesty, and a commitment to doing what's right for our users and partners.
                </p>
              </div>
            </div>
            
            <!-- Value 4 -->
            <div class="flex">
              <div class="flex-shrink-0">
                <div class="flex items-center justify-center h-12 w-12 rounded-md bg-blue-500 text-white">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                  </svg>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">Accessibility</h3>
                <p class="mt-2 text-gray-600 dark:text-gray-300">
                  We're committed to building products that are accessible to all Ghanaians, regardless of location or background.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Benefits Section -->
<section class="py-16 bg-gray-50 dark:bg-gray-800 relative overflow-hidden">
  <!-- Background accent -->
  <div class="absolute top-0 right-0 -mt-16 -mr-16 w-64 h-64 bg-yellow-500/10 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 left-0 -mb-16 -ml-16 w-64 h-64 bg-green-500/10 rounded-full blur-3xl"></div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white">Why Work With Us</h2>
      <p class="mt-4 text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        Join a team that values your growth, well-being, and contributions.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Benefit 1 -->
      <div class="bg-white dark:bg-gray-900 rounded-xl p-8 shadow-lg border border-gray-100 dark:border-gray-700">
        <div class="w-14 h-14 rounded-full bg-green-100 dark:bg-green-900/30 flex items-center justify-center mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-600 dark:text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Career Growth</h3>
        <p class="text-gray-600 dark:text-gray-300">
          Continuous learning opportunities, mentorship programs, and clear paths for advancement within the company.
        </p>
      </div>
      
      <!-- Benefit 2 -->
      <div class="bg-white dark:bg-gray-900 rounded-xl p-8 shadow-lg border border-gray-100 dark:border-gray-700">
        <div class="w-14 h-14 rounded-full bg-yellow-100 dark:bg-yellow-900/30 flex items-center justify-center mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-yellow-600 dark:text-yellow-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Competitive Compensation</h3>
        <p class="text-gray-600 dark:text-gray-300">
          Salary packages that recognize your value, with performance bonuses and equity options for eligible roles.
        </p>
      </div>
      
      <!-- Benefit 3 -->
      <div class="bg-white dark:bg-gray-900 rounded-xl p-8 shadow-lg border border-gray-100 dark:border-gray-700">
        <div class="w-14 h-14 rounded-full bg-red-100 dark:bg-red-900/30 flex items-center justify-center mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-red-600 dark:text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Health & Wellness</h3>
        <p class="text-gray-600 dark:text-gray-300">
          Comprehensive health insurance, wellness programs, and mental health support to keep you at your best.
        </p>
      </div>
      
      <!-- Benefit 4 -->
      <div class="bg-white dark:bg-gray-900 rounded-xl p-8 shadow-lg border border-gray-100 dark:border-gray-700">
        <div class="w-14 h-14 rounded-full bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-600 dark:text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Work-Life Balance</h3>
        <p class="text-gray-600 dark:text-gray-300">
          Flexible working hours, remote work options, and generous leave policies that respect your time outside work.
        </p>
      </div>
      
      <!-- Benefit 5 -->
      <div class="bg-white dark:bg-gray-900 rounded-xl p-8 shadow-lg border border-gray-100 dark:border-gray-700">
        <div class="w-14 h-14 rounded-full bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-purple-600 dark:text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Modern Workspace</h3>
        <p class="text-gray-600 dark:text-gray-300">
          State-of-the-art offices in prime locations, with collaborative spaces and the latest technology.
        </p>
      </div>
      
      <!-- Benefit 6 -->
      <div class="bg-white dark:bg-gray-900 rounded-xl p-8 shadow-lg border border-gray-100 dark:border-gray-700">
        <div class="w-14 h-14 rounded-full bg-pink-100 dark:bg-pink-900/30 flex items-center justify-center mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-pink-600 dark:text-pink-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Meaningful Work</h3>
        <p class="text-gray-600 dark:text-gray-300">
          Be part of a team that's building technology that genuinely improves daily life for millions of Ghanaians.
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Open Positions Section -->
<section id="open-positions" class="py-16 bg-white dark:bg-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white">Open Positions</h2>
      <p class="mt-4 text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        Find your perfect role and join us in building the future of digital services in Ghana.
      </p>
    </div>
    
    <!-- Department Tabs -->
    <div class="mb-10">
      <div class="border-b border-gray-200 dark:border-gray-700">
        <nav class="flex overflow-x-auto" aria-label="Departments">
          <button class="px-4 py-2 text-sm font-medium text-green-600 dark:text-green-400 border-b-2 border-green-600 dark:border-green-400 whitespace-nowrap">
            All Departments
          </button>
          <button class="px-4 py-2 text-sm font-medium text-gray-500 dark:text-gray-400 border-b-2 border-transparent hover:text-gray-700 hover:border-gray-300 dark:hover:text-gray-300 dark:hover:border-gray-600 whitespace-nowrap">
            Engineering
          </button>
          <button class="px-4 py-2 text-sm font-medium text-gray-500 dark:text-gray-400 border-b-2 border-transparent hover:text-gray-700 hover:border-gray-300 dark:hover:text-gray-300 dark:hover:border-gray-600 whitespace-nowrap">
            Design
          </button>
          <button class="px-4 py-2 text-sm font-medium text-gray-500 dark:text-gray-400 border-b-2 border-transparent hover:text-gray-700 hover:border-gray-300 dark:hover:text-gray-300 dark:hover:border-gray-600 whitespace-nowrap">
            Product
          </button>
          <button class="px-4 py-2 text-sm font-medium text-gray-500 dark:text-gray-400 border-b-2 border-transparent hover:text-gray-700 hover:border-gray-300 dark:hover:text-gray-300 dark:hover:border-gray-600 whitespace-nowrap">
            Marketing
          </button>
          <button class="px-4 py-2 text-sm font-medium text-gray-500 dark:text-gray-400 border-b-2 border-transparent hover:text-gray-700 hover:border-gray-300 dark:hover:text-gray-300 dark:hover:border-gray-600 whitespace-nowrap">
            Operations
          </button>
        </nav>
      </div>
    </div>
    
    <!-- Job listings -->
    <div class="space-y-6">
      <% 
        jobs = [
          {
            title: "Senior Backend Engineer",
            department: "Engineering",
            location: "Accra, Ghana",
            type: "Full-time",
            description: "We're looking for an experienced backend engineer to help us build the infrastructure powering our core services. You'll work on scaling our systems to handle millions of users while ensuring reliability and performance."
          },
          {
            title: "Product Designer",
            department: "Design",
            location: "Accra, Ghana (Hybrid)",
            type: "Full-time",
            description: "Join our design team to create intuitive, engaging experiences for our users. You'll collaborate closely with product, engineering, and research teams to shape the future of our app."
          },
          {
            title: "Mobile Engineer (Android)",
            department: "Engineering",
            location: "Kumasi, Ghana",
            type: "Full-time",
            description: "Help build and improve our Android app experience. You'll work on features that millions of Ghanaians use daily, with a focus on performance, reliability, and user experience."
          },
          {
            title: "Growth Marketing Manager",
            department: "Marketing",
            location: "Accra, Ghana",
            type: "Full-time",
            description: "Lead our user acquisition and retention strategies. You'll develop and execute campaigns that help us reach new users and keep them engaged with our platform."
          },
          {
            title: "Data Scientist",
            department: "Engineering",
            location: "Remote (Ghana)",
            type: "Full-time",
            description: "Use data to drive product decisions and business strategy. You'll analyze user behavior, build predictive models, and work with teams across the company to implement data-driven improvements."
          }
        ]
      %>
      
      <% jobs.each do |job| %>
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md hover:shadow-lg transition-shadow overflow-hidden border border-gray-100 dark:border-gray-700">
          <div class="p-6">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between">
              <div>
                <h3 class="text-xl font-bold text-gray-900 dark:text-white"><%= job[:title] %></h3>
                <div class="mt-1 flex flex-wrap items-center text-sm text-gray-500 dark:text-gray-400 gap-x-6 gap-y-1">
                  <span class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    <%= job[:department] %>
                  </span>
                  <span class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <%= job[:location] %>
                  </span>
                  <span class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <%= job[:type] %>
                  </span>
                </div>
              </div>
              <div class="mt-4 md:mt-0">
                <a href="#apply" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                  Apply Now
                </a>
              </div>
            </div>
            <div class="mt-4">
              <p class="text-base text-gray-600 dark:text-gray-300"><%= job[:description] %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    
    <!-- No matching positions CTA -->
    <div class="mt-12 bg-gray-50 dark:bg-gray-800 rounded-xl p-8 border border-gray-100 dark:border-gray-700">
      <div class="text-center">
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Don't see a matching position?</h3>
        <p class="text-gray-600 dark:text-gray-300 max-w-2xl mx-auto mb-8">
