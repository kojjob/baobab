<!-- Customer Support Section -->
<section id="customer-support" class="py-16 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="lg:grid lg:grid-cols-2 lg:gap-8">
      <!-- Left Column: Contact Form -->
      <div>
        <h2 class="text-3xl font-extrabold text-gray-900">
          Customer Support
        </h2>
        <p class="mt-4 text-lg text-gray-500">
          Have a question or need help? Fill out the form below and our support team will get back to you as soon as possible.
        </p>
        
        <div class="mt-8" data-controller="contact-form">
          <turbo-frame id="contact-form">
            <%= form_with url: "/contact", html: { class: "space-y-6", data: { action: "submit->contact-form#submit" } } do |form| %>
              <div>
                <label for="name" class="block text-sm font-medium text-gray-700">Your name</label>
                <div class="mt-1">
                  <%= form.text_field :name, required: true, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", data: { contact_form_target: "name" } %>
                </div>
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
                <div class="mt-1">
                  <%= form.email_field :email, required: true, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", data: { contact_form_target: "email" } %>
                </div>
              </div>
              
              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700">Phone number</label>
                <div class="mt-1">
                  <%= form.telephone_field :phone, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", data: { contact_form_target: "phone" } %>
                </div>
              </div>
              
              <div>
                <label for="issue_type" class="block text-sm font-medium text-gray-700">Type of issue</label>
                <div class="mt-1">
                  <%= form.select :issue_type, 
                    [
                      ["Select an issue type", ""], 
                      ["Account Issues", "account"], 
                      ["Payment Problems", "payment"],
                      ["App Functionality", "app"],
                      ["Feature Request", "feature"],
                      ["Other", "other"]
                    ],
                    { required: true },
                    { class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", data: { contact_form_target: "issueType" } }
                  %>
                </div>
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-gray-700">Message</label>
                <div class="mt-1">
                  <%= form.text_area :message, rows: 4, required: true, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", data: { contact_form_target: "message" } %>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <%= form.check_box :terms, required: true, class: "h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded", data: { contact_form_target: "terms" } %>
                </div>
                <div class="ml-3">
                  <p class="text-sm text-gray-500">
                    By submitting this form, you agree to our
                    <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500">Privacy Policy</a>.
                  </p>
                </div>
              </div>
              
              <div>
                <%= form.submit "Send Message", class: "w-full inline-flex items-center justify-center px-6 py-3 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
              </div>
            <% end %>
          </turbo-frame>
          
          <!-- Success message - hidden by default -->
          <div data-contact-form-target="success" class="hidden mt-6 rounded-md bg-green-50 p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-green-800">Message sent successfully</h3>
                <div class="mt-2 text-sm text-green-700">
                  <p>
                    Thank you for reaching out! Our team will get back to you as soon as possible.
                  </p>
                </div>
