<%# Enhanced Explore Page for Supper Ghana with SVG backgrounds (no external images) %>
<% content_for :title, "Explore Ghana - Discover Local Experiences | Supper" %>

<!-- Hero Section with Dynamic Content Showcase -->
<section class="relative bg-gradient-to-br from-green-700 via-yellow-600 to-red-700 overflow-hidden">
  <!-- Background pattern -->
  <div class="absolute inset-0 pattern-adinkra opacity-10"></div>
  
  <!-- Dynamic Content Carousel -->
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-24">
    <div class="text-center mb-10">
      <h1 class="text-4xl sm:text-5xl font-extrabold text-white leading-tight tracking-tight drop-shadow-md">
        Explore Ghana<span class="text-yellow-300">.</span>
      </h1>
      <p class="mt-4 text-xl text-white/90 max-w-3xl mx-auto">
        Discover the best of Ghana's food, entertainment, culture, and more all in one place.
      </p>
    </div>
    
    <!-- Categories Pills -->
    <div class="flex flex-wrap justify-center gap-3 mb-10">
      <button class="px-6 py-2 rounded-full bg-white/20 backdrop-blur-sm text-white font-medium border border-white/30 hover:bg-white/30 transition-all active">
        All
      </button>
      <button class="px-6 py-2 rounded-full bg-white/10 backdrop-blur-sm text-white font-medium border border-white/20 hover:bg-white/30 transition-all">
        Food
      </button>
      <button class="px-6 py-2 rounded-full bg-white/10 backdrop-blur-sm text-white font-medium border border-white/20 hover:bg-white/30 transition-all">
        Entertainment
      </button>
      <button class="px-6 py-2 rounded-full bg-white/10 backdrop-blur-sm text-white font-medium border border-white/20 hover:bg-white/30 transition-all">
        Culture
      </button>
      <button class="px-6 py-2 rounded-full bg-white/10 backdrop-blur-sm text-white font-medium border border-white/20 hover:bg-white/30 transition-all">
        Shopping
      </button>
      <button class="px-6 py-2 rounded-full bg-white/10 backdrop-blur-sm text-white font-medium border border-white/20 hover:bg-white/30 transition-all">
        Travel
      </button>
    </div>
    
    <!-- Showcase card grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Featured card 1 - Accra -->
      <div class="md:col-span-2 group">
        <div class="rounded-2xl bg-white/10 backdrop-blur overflow-hidden h-full border border-white/20 hover:border-white/40 transition-all shadow-lg hover:shadow-xl relative">
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent z-10"></div>
          <div class="h-80 overflow-hidden">
            <!-- Ghana flag-inspired SVG background -->
            <div class="w-full h-full bg-gradient-to-br from-green-600 via-yellow-500 to-red-600 group-hover:scale-105 transition-transform duration-700 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 400" class="w-full h-full opacity-40">
                <rect fill="#f59e0b" width="800" height="400"/>
                <path fill="#065f46" d="M0 0h800v150H0z"/>
                <path fill="#dc2626" d="M0 250h800v150H0z"/>
                <path fill="#ffffff" d="M400 125l50 86.6H350z"/>
              </svg>
              <!-- Skyline silhouette overlay -->
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 100" class="absolute bottom-0 w-full h-24 text-black/30" preserveAspectRatio="none">
                <path d="M0 100h800V80h-40V60h-20V40h-30V30h-20V50h-30V30h-20V20h-40V40h-20V20h-30V50h-20V40h-40V60h-30V40h-20V50h-30V30h-50V50h-20V30h-50V60h-30V40h-30V20h-40V40h-20V30h-30V60h-40V80h-30Z" fill="currentColor"/>
              </svg>
            </div>
          </div>
          <div class="absolute bottom-0 left-0 right-0 p-6 z-20">
            <div class="flex items-center mb-2">
              <span class="bg-yellow-500 text-xs font-bold px-2 py-1 rounded text-white uppercase tracking-wide">Featured</span>
              <span class="ml-2 text-white/80 text-sm">Coming Soon</span>
            </div>
            <h2 class="text-2xl font-bold text-white mb-1">Discover Accra's Hidden Gems</h2>
            <p class="text-white/80">Explore the vibrant capital's best-kept secrets, from local eateries to cultural hotspots.</p>
          </div>
        </div>
      </div>
      
      <!-- Featured card 2 - Jollof -->
      <div class="group">
        <div class="rounded-2xl bg-white/10 backdrop-blur overflow-hidden h-full border border-white/20 hover:border-white/40 transition-all shadow-lg hover:shadow-xl relative">
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent z-10"></div>
          <div class="h-80 overflow-hidden">
            <!-- Jollof-inspired background -->
            <div class="w-full h-full bg-gradient-to-br from-red-600 via-red-500 to-yellow-500 group-hover:scale-105 transition-transform duration-700 flex items-center justify-center">
              <!-- Food bowl shape -->
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200" class="w-40 h-40 text-white/20" fill="currentColor">
                <path d="M100 20c44.18 0 80 35.82 80 80 0 30-80 80-80 80S20 130 20 100c0-44.18 35.82-80 80-80zm0 30c-27.61 0-50 22.39-50 50 0 5 50 50 50 50s50-45 50-50c0-27.61-22.39-50-50-50z"/>
              </svg>
              <!-- Steam effect -->
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" class="absolute w-40 h-40 text-white/10 animate-pulse" fill="currentColor">
                <path d="M30 50c0-5.52 4.48-10 10-10s10 4.48 10 10-4.48 10-10 10-10-4.48-10-10zm20-30c0-5.52 4.48-10 10-10s10 4.48 10 10-4.48 10-10 10-10-4.48-10-10zm20 30c0-5.52 4.48-10 10-10s10 4.48 10 10-4.48 10-10 10-10-4.48-10-10z"/>
              </svg>
            </div>
          </div>
          <div class="absolute bottom-0 left-0 right-0 p-6 z-20">
            <div class="flex items-center mb-2">
              <span class="bg-red-500 text-xs font-bold px-2 py-1 rounded text-white uppercase tracking-wide">Food</span>
              <span class="ml-2 text-white/80 text-sm">Coming Soon</span>
            </div>
            <h2 class="text-2xl font-bold text-white mb-1">Ghana's Best Jollof</h2>
            <p class="text-white/80">Find the most delicious jollof rice in town with our curated guide.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Wave separator -->
  <div class="absolute bottom-0 left-0 right-0">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 120" class="w-full h-auto fill-white dark:fill-gray-900">
      <path d="M0,64L80,69.3C160,75,320,85,480,80C640,75,800,53,960,42.7C1120,32,1280,32,1360,32L1440,32L1440,120L1360,120C1280,120,1120,120,960,120C800,120,640,120,480,120C320,120,160,120,80,120L0,120Z"></path>
    </svg>
  </div>
</section>

<!-- Trending Experiences Section -->
<section class="py-16 bg-white dark:bg-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mr-2 text-red-500" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd" />
        </svg>
        Trending Now
      </h2>
      <a href="#" class="text-green-600 dark:text-green-400 hover:text-green-700 dark:hover:text-green-300 font-medium flex items-center transition-colors">
        View all
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
    
    <!-- Trending Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <% 
        titles = ["Makola Market Tour", "Accra Food Festival", "Live Music Night", "Cape Coast Getaway"]
        descriptions = [
          "Guided tours through Ghana's famous market district", 
          "Annual celebration of Ghana's culinary excellence",
          "Weekly showcase of local musicians and performers",
          "Weekend escapes to historic coastal landmarks"
        ]
        categories = [
          '<span class="bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300 px-2 py-0.5 rounded text-xs font-medium">Culture</span>',
          '<span class="bg-orange-100 dark:bg-orange-900/30 text-orange-800 dark:text-orange-300 px-2 py-0.5 rounded text-xs font-medium">Food</span>',
          '<span class="bg-purple-100 dark:bg-purple-900/30 text-purple-800 dark:text-purple-300 px-2 py-0.5 rounded text-xs font-medium">Entertainment</span>',
          '<span class="bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300 px-2 py-0.5 rounded text-xs font-medium">Travel</span>'
        ]
        
        # Define background colors for each trending item
        bg_colors = [
          "from-green-600 to-yellow-500",
          "from-red-600 to-orange-500",
          "from-purple-600 to-blue-500",
          "from-blue-600 to-indigo-500"
        ]
        
        # Define icon paths for each trending item
        icons = [
          "M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z",
          "M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z",
          "M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z",
          "M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
        ]
      %>
      
      <% titles.each_with_index do |title, i| %>
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md hover:shadow-xl transition-shadow overflow-hidden group">
          <div class="relative h-48 overflow-hidden">
            <div class="absolute top-2 right-2 bg-white/80 dark:bg-black/50 backdrop-blur-sm rounded-full px-2 py-1 text-xs font-medium z-10">
              Coming Soon
            </div>
            <!-- Custom gradient background with icon instead of image -->
            <div class="w-full h-full bg-gradient-to-br <%= bg_colors[i % bg_colors.length] %> group-hover:scale-105 transition-transform duration-500 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-white/30" viewBox="0 0 20 20" fill="currentColor">
                <path d="<%= icons[i % icons.length] %>" />
              </svg>
              <div class="absolute text-white text-sm font-medium bottom-3 left-3">
                <%= title %>
              </div>
            </div>
          </div>
          <div class="p-4">
            <div class="flex justify-between items-start mb-2">
              <h3 class="font-semibold text-gray-900 dark:text-white"><%= title %></h3>
              <%= categories[i].html_safe %>
            </div>
            <p class="text-sm text-gray-600 dark:text-gray-300 line-clamp-2 mb-3"><%= descriptions[i] %></p>
            <div class="flex justify-between items-center">
              <div class="flex -space-x-2">
                <% 3.times do |j| %>
                  <div class="h-6 w-6 rounded-full bg-gradient-to-br <%= ['from-blue-400 to-indigo-500', 'from-pink-400 to-rose-500', 'from-green-400 to-emerald-500'][j % 3] %> flex items-center justify-center text-xs text-white font-bold ring-2 ring-white dark:ring-gray-800">
                    <%= ['J', 'K', 'A'][j] %>
                  </div>
                <% end %>
                <div class="h-6 w-6 rounded-full bg-gray-200 dark:bg-gray-700 flex items-center justify-center text-xs text-gray-600 dark:text-gray-300 font-medium ring-2 ring-white dark:ring-gray-800">
                  +<%= rand(5..19) %>
                </div>
              </div>
              <div class="text-yellow-500 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118l-2.8-2.034c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                <span class="ml-1 text-sm font-medium"><%= (4.0 + rand() * (5.0 - 4.0)).round(1) %></span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Local Merchants Showcase -->
<section class="py-16 bg-gray-50 dark:bg-gray-800 overflow-hidden relative">
  <!-- Background accent -->
  <div class="absolute top-0 right-0 -mt-16 -mr-16 w-64 h-64 bg-yellow-500/10 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 left-0 -mb-16 -ml-16 w-64 h-64 bg-green-500/10 rounded-full blur-3xl"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mr-2 text-green-500" viewBox="0 0 20 20" fill="currentColor">
          <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
        </svg>
        Local Merchants
      </h2>
      <a href="#" class="text-green-600 dark:text-green-400 hover:text-green-700 dark:hover:text-green-300 font-medium flex items-center transition-colors">
        View all
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
    
    <!-- Merchant Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% 
        merchant_types = ["Restaurant", "Craft Shop", "Boutique"]
        merchant_names = ["Adwoa's Kitchen", "Ashanti Crafts", "Accra Styles"]
        merchant_locations = ["East Legon, Accra", "Kumasi Central", "Osu, Accra"]
        merchant_descriptions = [
          "Traditional Ghanaian cuisine with a modern twist. Specializing in authentic jollof rice and grilled tilapia.",
          "Handcrafted Kente cloth, wood carvings, and traditional Ghanaian art pieces made by local artisans.",
          "Contemporary fashion inspired by traditional African patterns and designs. Custom tailoring available."
        ]
        merchant_colors = [
          "from-orange-300 to-red-400",
          "from-yellow-300 to-amber-400",
          "from-blue-300 to-indigo-400"
        ]
        merchant_avatars = ["A", "K", "M"]
      %>
      
      <% 3.times do |i| %>
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-md hover:shadow-xl transition-shadow overflow-hidden">
          <div class="relative h-32 overflow-hidden">
            <div class="absolute top-2 right-2 bg-white/80 dark:bg-black/50 backdrop-blur-sm rounded-full px-2 py-1 text-xs font-medium z-10">
              Coming Soon
            </div>
            <div class="w-full h-full flex items-center justify-center bg-gradient-to-r <%= merchant_colors[i] %>">
              <div class="text-3xl font-bold text-white"><%= merchant_names[i].split(' ').map(&:first).join %></div>
            </div>
          </div>
          <div class="p-4">
            <div class="flex justify-between items-start mb-1">
              <h3 class="font-semibold text-gray-900 dark:text-white"><%= merchant_names[i] %></h3>
              <span class="bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300 px-2 py-0.5 rounded text-xs font-medium"><%= merchant_types[i] %></span>
            </div>
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">
              <span class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                </svg>
                <%= merchant_locations[i] %>
              </span>
            </p>
            <p class="text-sm text-gray-600 dark:text-gray-300 line-clamp-2 mb-3"><%= merchant_descriptions[i] %></p>
            <div class="border-t border-gray-100 dark:border-gray-700 pt-3 flex justify-between items-center">
              <div class="flex items-center">
                <div class="h-8 w-8 rounded-full bg-gradient-to-br <%= merchant_colors[i] %> flex items-center justify-center text-sm text-white font-bold">
                  <%= merchant_avatars[i] %>
                </div>
                <div class="ml-2">
                  <p class="text-xs font-medium text-gray-900 dark:text-white">Verified Merchant</p>
                  <div class="flex items-center mt-0.5">
                    <% rating = (4.0 + rand() * (5.0 - 4.0)).round(1) %>
                    <div class="flex items-center">
                      <% 5.times do |star| %>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 <%= star < rating.to_i ? 'text-yellow-500' : 'text-gray-300 dark:text-gray-600' %>" viewBox="0 0 20 20" fill="currentColor">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118l-2.8-2.034c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                      <% end %>
                      <span class="ml-1 text-xs text-gray-500 dark:text-gray-400"><%= rating %></span>
                    </div>
                  </div>
                </div>
              </div>
              <button class="inline-flex items-center px-3 py-1.5 border border-green-600 dark:border-green-500 text-green-600 dark:text-green-500 rounded-lg text-sm font-medium hover:bg-green-50 dark:hover:bg-green-900/20 transition-colors">
                Follow
              </button>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- Community Highlights -->
