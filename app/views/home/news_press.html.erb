<%# News & Press page for Supper Ghana app %>
<% content_for :title, "News & Press - Supper Ghana" %>

<!-- Hero Section -->
<section class="relative bg-gradient-to-br from-green-700 via-yellow-600 to-red-700 overflow-hidden">
  <!-- Background pattern -->
  <div class="absolute inset-0 pattern-adinkra opacity-10"></div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-24">
    <div class="text-center mb-10">
      <h1 class="text-4xl sm:text-5xl font-extrabold text-white leading-tight tracking-tight drop-shadow-md">
        News & Press<span class="text-yellow-300">.</span>
      </h1>
      <p class="mt-4 text-xl text-white/90 max-w-3xl mx-auto">
        Stay updated with the latest announcements, press releases, and media coverage about Supper Ghana.
      </p>
    </div>
    
    <!-- News Categories -->
    <div class="flex flex-wrap justify-center gap-3 mt-8">
      <button class="px-6 py-2 rounded-full bg-white/20 backdrop-blur-sm text-white font-medium border border-white/30 hover:bg-white/30 transition-all active">
        All News
      </button>
      <button class="px-6 py-2 rounded-full bg-white/10 backdrop-blur-sm text-white font-medium border border-white/20 hover:bg-white/30 transition-all">
        Company Updates
      </button>
      <button class="px-6 py-2 rounded-full bg-white/10 backdrop-blur-sm text-white font-medium border border-white/20 hover:bg-white/30 transition-all">
        Product Launches
      </button>
      <button class="px-6 py-2 rounded-full bg-white/10 backdrop-blur-sm text-white font-medium border border-white/20 hover:bg-white/30 transition-all">
        Partnerships
      </button>
      <button class="px-6 py-2 rounded-full bg-white/10 backdrop-blur-sm text-white font-medium border border-white/20 hover:bg-white/30 transition-all">
        Press Releases
      </button>
    </div>
  </div>
  
  <!-- Wave separator -->
  <div class="absolute bottom-0 left-0 right-0">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 120" class="w-full h-auto fill-white dark:fill-gray-900">
      <path d="M0,64L80,69.3C160,75,320,85,480,80C640,75,800,53,960,42.7C1120,32,1280,32,1360,32L1440,32L1440,120L1360,120C1280,120,1120,120,960,120C800,120,640,120,480,120C320,120,160,120,80,120L0,120Z"></path>
    </svg>
  </div>
</section>

<!-- Featured News Section -->
<section class="py-16 bg-white dark:bg-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white">Featured News</h2>
      <p class="mt-2 text-lg text-gray-600 dark:text-gray-300">
        The latest updates and announcements from Supper Ghana
      </p>
    </div>
    
    <!-- Featured News Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Main Feature -->
      <div class="bg-white dark:bg-gray-800 rounded-xl overflow-hidden shadow-lg border border-gray-100 dark:border-gray-700 group">
        <div class="aspect-w-16 aspect-h-9 relative">
          <!-- Feature image (using gradient background as placeholder) -->
          <div class="w-full h-full bg-gradient-to-br from-green-500 to-yellow-500 group-hover:scale-105 transition-transform duration-500 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-white/30" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
            </svg>
          </div>
          <!-- Category badge -->
          <div class="absolute top-4 left-4 bg-green-600 text-white text-xs font-bold px-3 py-1 rounded-full shadow-md">
            Product Launch
          </div>
        </div>
        <div class="p-6">
          <div class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            March 1, 2025
          </div>
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-3 group-hover:text-green-600 dark:group-hover:text-green-400 transition-colors">
            Supper Ghana Launches Mobile Money Integration Across All Services
          </h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">
            Supper Ghana announces seamless integration with all major mobile money providers in Ghana, allowing users to easily make payments across all services on the platform. This development marks a significant milestone in our mission to create an all-in-one super app for Ghanaians.
          </p>
          <a href="#" class="flex items-center font-medium text-green-600 dark:text-green-400 hover:text-green-700 dark:hover:text-green-300 transition-colors">
            Read the full story
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1 group-hover:translate-x-1 transition-transform" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Secondary features (side column) -->
      <div class="space-y-8">
        <% [
          {
            category: "Partnership",
            color: "blue",
            date: "February 15, 2025",
            title: "Supper Ghana Partners with Leading Food Delivery Services",
            excerpt: "Strategic partnership with Ghana's top restaurants and food delivery services to expand the platform's food delivery capabilities."
          },
          {
            category: "Company Update",
            color: "purple",
            date: "January 30, 2025",
            title: "Supper Ghana Raises $5M in Seed Funding to Accelerate Growth",
            excerpt: "Investment will be used to expand the team, enhance the platform's technology, and accelerate market penetration across major cities in Ghana."
          }
        ].each do |feature| %>
          <div class="bg-white dark:bg-gray-800 rounded-xl overflow-hidden shadow-md border border-gray-100 dark:border-gray-700 flex flex-col sm:flex-row group">
            <div class="sm:w-1/3 aspect-w-4 aspect-h-3 sm:aspect-none sm:h-auto relative">
              <!-- Feature image (using gradient background as placeholder) -->
              <div class="w-full h-full bg-gradient-to-br from-<%= feature[:color] %>-500 to-<%= feature[:color] %>-700 group-hover:scale-105 transition-transform duration-500 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-white/30" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
                </svg>
              </div>
              <!-- Category badge -->
              <div class="absolute top-4 left-4 bg-<%= feature[:color] %>-600 text-white text-xs font-bold px-3 py-1 rounded-full shadow-md">
                <%= feature[:category] %>
              </div>
            </div>
            <div class="sm:w-2/3 p-5">
              <div class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <%= feature[:date] %>
              </div>
              <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-2 group-hover:text-<%= feature[:color] %>-600 dark:group-hover:text-<%= feature[:color] %>-400 transition-colors">
                <%= feature[:title] %>
              </h3>
              <p class="text-gray-600 dark:text-gray-300 text-sm mb-3">
                <%= feature[:excerpt] %>
              </p>
              <a href="#" class="flex items-center text-sm font-medium text-<%= feature[:color] %>-600 dark:text-<%= feature[:color] %>-400 hover:text-<%= feature[:color] %>-700 dark:hover:text-<%= feature[:color] %>-300 transition-colors">
                Read more
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 group-hover:translate-x-1 transition-transform" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<!-- Latest Press Releases -->
<section class="py-16 bg-gray-50 dark:bg-gray-800 relative overflow-hidden">
  <!-- Background accent -->
  <div class="absolute top-0 right-0 -mt-16 -mr-16 w-64 h-64 bg-yellow-500/10 rounded-full blur-3xl"></div>
  <div class="absolute bottom-0 left-0 -mb-16 -ml-16 w-64 h-64 bg-green-500/10 rounded-full blur-3xl"></div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-12">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white">Press Releases</h2>
      <p class="mt-2 text-lg text-gray-600 dark:text-gray-300">
        Official announcements from Supper Ghana
      </p>
    </div>
    
    <!-- Press Releases Timeline -->
    <div class="relative">
      <!-- Timeline line -->
      <div class="absolute left-8 lg:left-1/2 top-0 bottom-0 w-1 bg-gradient-to-b from-green-500 via-yellow-500 to-green-500 rounded-full transform lg:-translate-x-1/2"></div>
      
      <% [
        {
          title: "Supper Ghana Expands Operations to Kumasi and Tamale",
          date: "February 25, 2025",
          excerpt: "Following strong demand and user growth, Supper Ghana announces the expansion of its operations to Kumasi and Tamale, bringing its innovative super app to more Ghanaians across the country.",
          color: "green"
        },
        {
          title: "Supper Ghana Introduces Ride-Sharing Feature",
          date: "January 20, 2025",
          excerpt: "In our continued effort to provide comprehensive services to Ghanaians, Supper Ghana today announced the launch of its new ride-sharing feature, allowing users to book rides directly through the app.",
          color: "yellow"
        },
        {
          title: "Supper Ghana Announces Strategic Partnership with MTN Ghana",
          date: "December 12, 2024",
          excerpt: "Supper Ghana is pleased to announce a strategic partnership with MTN Ghana, the country's largest telecommunications provider. This collaboration will enable seamless mobile money integration and special data packages for Supper users.",
          color: "red"
        },
        {
          title: "Supper Ghana Officially Launches Beta Version",
          date: "November 5, 2024",
          excerpt: "Today marks the official launch of Supper Ghana's beta version, inviting select users to experience Ghana's first comprehensive super app that integrates essential services, entertainment, and social features in one platform.",
          color: "blue"
        }
      ].each_with_index do |release, index| %>
        <div class="relative my-8">
          <div class="flex flex-col lg:flex-row items-center">
            <div class="flex-1 lg:pr-10 lg:text-right <%= index.odd? ? 'lg:order-last lg:pl-10 lg:pr-0 lg:text-left' : '' %> mb-6 lg:mb-0">
              <div class="bg-white dark:bg-gray-900 rounded-xl p-6 shadow-md">
                <div class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-2 <%= index.odd? ? 'lg:justify-start' : 'lg:justify-end' %>">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <%= release[:date] %>
                </div>
                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">
                  <%= release[:title] %>
                </h3>
                <p class="text-gray-600 dark:text-gray-300 mb-4">
                  <%= release[:excerpt] %>
                </p>
                <a href="#" class="inline-flex items-center font-medium text-<%= release[:color] %>-600 dark:text-<%= release[:color] %>-400 hover:text-<%= release[:color] %>-700 dark:hover:text-<%= release[:color] %>-300 transition-colors">
                  Read full press release
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </a>
              </div>
            </div>
            <div class="flex-shrink-0 w-16 h-16 rounded-full bg-<%= release[:color] %>-500 text-white flex items-center justify-center z-10 text-xl font-bold border-4 border-white dark:border-gray-800">
              <%= (index + 1) %>
            </div>
            <div class="flex-1 hidden lg:block"></div>
          </div>
        </div>
      <% end %>
    </div>
    
    <!-- View all press releases button -->
    <div class="mt-12 text-center">
      <a href="#" class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-green-600 to-green-500 hover:from-green-700 hover:to-green-600 text-white font-bold rounded-lg shadow-sm hover:shadow transition-all">
        View All Press Releases
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>
</section>

