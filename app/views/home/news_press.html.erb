  <!-- Background pattern -->
  <div class="absolute inset-0 pattern-kente opacity-5"></div>
  
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div>
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">Press Kit & Media Resources</h2>
