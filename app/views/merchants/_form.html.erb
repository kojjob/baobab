<div class="max-w-4xl mx-auto bg-white dark:bg-gray-800 rounded-xl shadow-md overflow-hidden transition-colors duration-200"
     data-controller="merchant-form file-upload">
  <%= form_with(model: merchant, class: "p-6 space-y-6") do |form| %>
    <% if merchant.errors.any? %>
      <div class="bg-red-50 dark:bg-red-900/30 border-l-4 border-red-500 p-4 mb-6 rounded-md">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800 dark:text-red-200">
              <%= pluralize(merchant.errors.count, "error") %> prohibited this merchant from being saved:
            </h3>
            <div class="mt-2 text-sm text-red-700 dark:text-red-300">
              <ul class="list-disc pl-5 space-y-1">
                <% merchant.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Form Sections -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Left Column: Basic Info -->
      <div class="md:col-span-2 space-y-6">
        <div>
          <h2 class="text-xl font-bold text-gray-900 dark:text-white flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 text-primary-600 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            Business Information
          </h2>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
            Add your business details to help customers find and recognize your store.
          </p>
        </div>

        <!-- Business Name -->
        <div>
          <%= form.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <div class="mt-1 relative rounded-md shadow-sm">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <%= form.text_field :name, class: "py-2 px-3 pl-10 block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:ring-primary-500 focus:border-primary-500", placeholder: "Enter your business name" %>
          </div>
        </div>

        <!-- Business Description -->
        <div>
          <%= form.label :description, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <div class="mt-1">
            <%= form.text_area :description, rows: 4, class: "py-2 px-3 block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:ring-primary-500 focus:border-primary-500", placeholder: "Tell customers about your business, products, and services..." %>
          </div>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
            <span class="font-medium" data-merchant-form-target="characterCount">0</span>/500 characters
          </p>
        </div>

        <!-- Phone Number -->
        <div>
          <%= form.label :phone, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <div class="mt-1 relative rounded-md shadow-sm">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <span class="text-gray-500 dark:text-gray-400 sm:text-sm">+233</span>
            </div>
            <%= form.telephone_field :phone, class: "py-2 px-3 pl-14 block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:ring-primary-500 focus:border-primary-500", placeholder: "XX XXX XXXX" %>
          </div>
          <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
            Enter your Ghana phone number without the country code
          </p>
        </div>

        <!-- Location -->
        <div>
          <%= form.label :location, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
          <div class="mt-1 relative rounded-md shadow-sm">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <%= form.text_field :location, class: "py-2 px-3 pl-10 block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:ring-primary-500 focus:border-primary-500", placeholder: "e.g. Accra, Ghana" %>
          </div>
        </div>

        <!-- Operating Hours -->
        <div>
          <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Business Hours</h3>
          <div class="space-y-3">
            <% ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'].each do |day| %>
              <div class="flex items-center space-x-2" 
                   data-controller="business-hours" 
                   data-business-hours-day-value="<%= day.downcase %>">
                <div class="w-28">
                  <div class="flex items-center">
                    <input type="checkbox" 
                           id="<%= day.downcase %>_open" 
                           name="merchant[business_hours][<%= day.downcase %>][open]" 
                           class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded"
                           data-action="business-hours#toggleDay">
                    <label for="<%= day.downcase %>_open" class="ml-2 block text-sm text-gray-700 dark:text-gray-300">
                      <%= day %>
                    </label>
                  </div>
                </div>
                <div class="flex items-center space-x-2">
                  <div class="relative rounded-md shadow-sm">
                    <input type="time" 
                           name="merchant[business_hours][<%= day.downcase %>][open_time]" 
                           class="block w-24 rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:ring-primary-500 focus:border-primary-500 text-sm"
                           data-business-hours-target="openTime">
                  </div>
                  <span class="text-gray-500 dark:text-gray-400">to</span>
                  <div class="relative rounded-md shadow-sm">
                    <input type="time" 
                           name="merchant[business_hours][<%= day.downcase %>][close_time]" 
                           class="block w-24 rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:ring-primary-500 focus:border-primary-500 text-sm"
                           data-business-hours-target="closeTime">
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Payment Methods -->
        <div>
          <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Payment Methods Accepted</h3>
          <div class="grid grid-cols-2 sm:grid-cols-3 gap-y-2">
            <div class="flex items-center">
              <input id="mtn_mobile_money" name="merchant[payment_methods][]" type="checkbox" value="mtn_mobile_money" class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded">
              <label for="mtn_mobile_money" class="ml-2 block text-sm text-gray-700 dark:text-gray-300">
                MTN Mobile Money
              </label>
            </div>
            <div class="flex items-center">
              <input id="vodafone_cash" name="merchant[payment_methods][]" type="checkbox" value="vodafone_cash" class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded">
              <label for="vodafone_cash" class="ml-2 block text-sm text-gray-700 dark:text-gray-300">
                Vodafone Cash
              </label>
            </div>
            <div class="flex items-center">
              <input id="airteltigo_money" name="merchant[payment_methods][]" type="checkbox" value="airteltigo_money" class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded">
              <label for="airteltigo_money" class="ml-2 block text-sm text-gray-700 dark:text-gray-300">
                AirtelTigo Money
              </label>
            </div>
            <div class="flex items-center">
              <input id="cash" name="merchant[payment_methods][]" type="checkbox" value="cash" class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded">
              <label for="cash" class="ml-2 block text-sm text-gray-700 dark:text-gray-300">
                Cash on Delivery
              </label>
            </div>
            <div class="flex items-center">
              <input id="bank_transfer" name="merchant[payment_methods][]" type="checkbox" value="bank_transfer" class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded">
              <label for="bank_transfer" class="ml-2 block text-sm text-gray-700 dark:text-gray-300">
                Bank Transfer
              </label>
            </div>
            <div class="flex items-center">
              <input id="wallet" name="merchant[payment_methods][]" type="checkbox" value="wallet" class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded">
              <label for="wallet" class="ml-2 block text-sm text-gray-700 dark:text-gray-300">
                App Wallet
              </label>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column: Media & Categories -->
      <div class="space-y-6">
        <!-- Logo Upload -->
        <div>
          <h2 class="text-xl font-bold text-gray-900 dark:text-white flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 text-primary-600 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            Store Logo
          </h2>
          <div class="mt-2">
            <div class="flex items-center justify-center">
              <div class="w-40 h-40 rounded-lg border-2 border-dashed border-gray-300 dark:border-gray-600 flex justify-center items-center overflow-hidden relative" 
                   data-file-upload-target="preview">
                <% if merchant.logo.present? %>
                  <%= image_tag merchant.logo, class: "w-full h-full object-cover" %>
                <% else %>
                  <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                    <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                  </svg>
                <% end %>
              </div>
            </div>
            <div class="mt-4">
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">
                Upload a logo or store image
              </label>
              <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 dark:border-gray-600 border-dashed rounded-md cursor-pointer"
                   data-action="click->file-upload#triggerFileInput">
                <div class="space-y-1 text-center">
                  <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
                    <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                  </svg>
                  <div class="flex text-sm text-gray-600 dark:text-gray-400">
                    <span>Upload an image</span>
                    <p class="pl-1">or drag and drop</p>
                  </div>
                  <p class="text-xs text-gray-500 dark:text-gray-400">
                    PNG, JPG, GIF up to 5MB
                  </p>
                </div>
                <%= form.file_field :logo, direct_upload: true, accept: 'image/*', class: "hidden", data: { file_upload_target: "input", action: "change->file-upload#displayPreview" } %>
              </div>
            </div>
          </div>
        </div>

        <!-- Business Category -->
        <div>
          <h2 class="text-xl font-bold text-gray-900 dark:text-white flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2 text-primary-600 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
            </svg>
            Business Category
          </h2>
          <div class="mt-2">
            <%= form.collection_select :category_id, 
                                      Category.all.order(:name), 
                                      :id, 
                                      :name, 
                                      { include_blank: "Select a category" }, 
                                      { class: "py-2 px-3 block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:ring-primary-500 focus:border-primary-500" } %>
          </div>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
            Select the category that best describes your business
          </p>
        </div>

        <!-- Social Media Links -->
        <div>
          <h3 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Social Media (Optional)</h3>
          
          <!-- WhatsApp -->
          <div class="mt-2">
            <label for="whatsapp" class="block text-xs text-gray-500 dark:text-gray-400">WhatsApp</label>
            <div class="mt-1 relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-4 w-4 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
              </div>
              <input type="text" 
                     name="merchant[social_media][whatsapp]" 
                     id="whatsapp" 
                     class="py-2 px-3 pl-10 block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:ring-primary-500 focus:border-primary-500 text-sm" 
                     placeholder="+233 XX XXX XXXX">
            </div>
          </div>
          
          <!-- Instagram -->
          <div class="mt-2">
            <label for="instagram" class="block text-xs text-gray-500 dark:text-gray-400">Instagram</label>
            <div class="mt-1 relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-4 w-4 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
                </svg>
              </div>
              <input type="text" 
                     name="merchant[social_media][instagram]" 
                     id="instagram" 
                     class="py-2 px-3 pl-10 block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:ring-primary-500 focus:border-primary-500 text-sm" 
                     placeholder="@username">
            </div>
          </div>
          
          <!-- Facebook -->
          <div class="mt-2">
            <label for="facebook" class="block text-xs text-gray-500 dark:text-gray-400">Facebook</label>
            <div class="mt-1 relative rounded-md shadow-sm">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <svg class="h-4 w-4 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </div>
              <input type="text" 
                     name="merchant[social_media][facebook]" 
                     id="facebook" 
                     class="py-2 px-3 pl-10 block w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-white shadow-sm focus:ring-primary-500 focus:border-primary-500 text-sm" 
                     placeholder="Page name or URL">
            </div>
          </div>
        </div>
        
        <!-- Terms and Conditions -->
        <div class="mt-6">
          <div class="flex items-start">
            <div class="flex items-center h-5">
              <%= form.check_box :terms_accepted, class: "py-2 px-3 focus:ring-primary-500 h-4 w-4 text-primary-600 border-gray-300 rounded" %>
            </div>
            <div class="ml-3 text-sm">
              <label for="merchant_terms_accepted" class="font-medium text-gray-700 dark:text-gray-300">Accept Terms and Conditions</label>
              <p class="text-gray-500 dark:text-gray-400">I agree to the <a href="#" class="text-primary-600 hover:text-primary-500 dark:text-primary-400">Terms of Service</a> and <a href="#" class="text-primary-600 hover:text-primary-500 dark:text-primary-400">Privacy Policy</a>.</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Form Actions -->
    <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200 dark:border-gray-700">
      <%= link_to "Cancel", merchants_path, class: "px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
      
      <%= form.submit class: "inline-flex justify-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
    </div>
  <% end %>
</div>