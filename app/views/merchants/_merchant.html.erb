<div id="<%= dom_id merchant %>" class="bg-white dark:bg-gray-800 rounded-xl shadow-sm overflow-hidden">
  <!-- Merchant Header with Logo -->
  <div class="relative h-48 bg-gray-100 dark:bg-gray-700">
    <% if merchant.logo.present? %>
      <%= image_tag merchant.logo, class: "w-full h-full object-cover" %>
    <% else %>
      <div class="w-full h-full flex items-center justify-center bg-primary-100 dark:bg-primary-900">
        <span class="text-6xl font-bold text-primary-600 dark:text-primary-400">
          <%= merchant.name.first %>
        </span>
      </div>
    <% end %>
    
    <!-- Status Badges -->
    <div class="absolute top-4 right-4 flex flex-col space-y-2">
      <% if merchant.verified? %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200">
          <svg class="mr-1 h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
          </svg>
          Verified
        </span>
      <% end %>
      
      <% if merchant.active? %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-200">
          Active
        </span>
      <% else %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300">
          Inactive
        </span>
      <% end %>
    </div>
  </div>

  <!-- Merchant Information -->
  <div class="p-6">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4"><%= merchant.name %></h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Left Column -->
      <div class="space-y-4">
        <div>
          <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Description</h3>
          <p class="mt-1 text-base text-gray-900 dark:text-white">
            <%= merchant.description.present? ? merchant.description : "No description provided" %>
          </p>
        </div>
        
        <div>
          <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Contact</h3>
          <div class="mt-1 flex items-center text-base text-gray-900 dark:text-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <%= merchant.phone.present? ? merchant.phone : "No phone number provided" %>
          </div>
        </div>
      </div>
      
      <!-- Right Column -->
      <div class="space-y-4">
        <div>
          <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Location</h3>
          <div class="mt-1 flex items-center text-base text-gray-900 dark:text-white">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <%= merchant.location.present? ? merchant.location : "No location provided" %>
          </div>
        </div>
        
        <div>
          <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Account Details</h3>
          <div class="mt-1 text-base text-gray-900 dark:text-white">
            <p class="flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              User ID: <%= merchant.user_id %>
            </p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Action Buttons (if needed) -->
    <div class="mt-6 flex flex-col sm:flex-row sm:space-x-4 space-y-3 sm:space-y-0">
      <%= link_to "Visit Shop", merchant_path(merchant), class: "inline-flex justify-center items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
      
      <%= link_to "Contact Merchant", "#", class: "inline-flex justify-center items-center px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
    </div>
  </div>
</div>