<div class="container mx-auto py-8 px-4">
  <div class="flex items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Reviews for <%= @merchant.name %></h1>
    <%= link_to merchant_path(@merchant), class: "ml-4 text-sm text-primary-600 dark:text-primary-400" do %>
      ‚Üê Back to Merchant
    <% end %>
  </div>
  
  <div class="space-y-6">
    <% if @reviews.any? %>
      <% @reviews.each do |review| %>
        <!-- Review card code here -->
      <% end %>
      
      <% if @pagy %>
        <div class="mt-6">
          <%== pagy_nav(@pagy, size: 5) %>
        </div>
      <% end %>
    <% else %>
      <div class="bg-white dark:bg-gray-800 rounded-lg p-8 text-center shadow">
        <p class="text-gray-700 dark:text-gray-300">No reviews yet for this merchant.</p>
      </div>
    <% end %>
  </div>
</div>