<div class="merchant-profile bg-white dark:bg-gray-900 min-h-screen transition-colors duration-200" data-controller="merchant theme">
  <!-- Merchant Header -->
  <div class="relative">
    <!-- Cover Photo -->
    <div class="h-48 bg-gradient-to-r from-primary-600 to-primary-800 overflow-hidden">
      <% if @merchant.cover_photo.present? %>
        <%= image_tag @merchant.cover_photo, class: "w-full h-full object-cover" %>
      <% else %>
        <div class="h-full w-full flex items-center justify-center bg-gray-200 dark:bg-gray-800">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 text-gray-400 dark:text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
      <% end %>
    </div>

    <!-- Merchant Logo/Profile -->
    <div class="absolute -bottom-16 left-4 flex items-end">
      <div class="h-24 w-24 rounded-xl bg-white dark:bg-gray-800 shadow-md overflow-hidden border-4 border-white dark:border-gray-800">
        <% if @merchant.logo.present? %>
          <%= image_tag @merchant.logo, class: "w-full h-full object-cover" %>
        <% else %>
          <div class="h-full w-full flex items-center justify-center bg-primary-100 dark:bg-primary-900">
            <span class="text-4xl font-bold text-primary-600 dark:text-primary-400">
              <%= @merchant.name[0].upcase %>
            </span>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Admin Actions -->
    <div class="absolute bottom-4 right-4 flex space-x-2">
      <% if policy(@merchant).edit? %>
        <%= link_to edit_merchant_path(@merchant), class: "p-2 rounded-full bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm text-gray-700 dark:text-gray-300 shadow-sm" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
          </svg>
        <% end %>
      <% end %>
      
      <% if policy(@merchant).toggle_feature? %>
        <%= button_to toggle_feature_merchant_path(@merchant), method: :post, class: "p-2 rounded-full bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm #{@merchant.featured? ? 'text-yellow-500' : 'text-gray-700 dark:text-gray-300'} shadow-sm" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
          </svg>
        <% end %>
      <% end %>
      
      <button type="button" class="p-2 rounded-full bg-white/80 dark:bg-gray-800/80 backdrop-blur-sm text-gray-700 dark:text-gray-300 shadow-sm" data-action="theme#toggle">
        <svg data-theme-target="lightIcon" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
        <svg data-theme-target="darkIcon" xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Merchant Info Section -->
  <div class="pt-20 px-4 max-w-7xl mx-auto">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between">
      <div>
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white flex items-center">
          <%= @merchant.name %>
          <% if @merchant.verified? %>
            <span class="ml-2 flex-shrink-0 inline-block">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-500" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </span>
          <% end %>
        </h1>
        <div class="flex items-center mt-1">
          <div class="flex">
            <% (1..5).each do |i| %>
              <% if i <= @merchant.average_rating %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              <% else %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-300 dark:text-gray-600" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              <% end %>
            <% end %>
          </div>
          <span class="ml-1 text-sm text-gray-600 dark:text-gray-400">
            <%= @merchant.average_rating %> (<%= @merchant.reviews_count %> reviews)
          </span>
        </div>
        <div class="flex items-center mt-1 text-sm text-gray-600 dark:text-gray-400">
          <span class="bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-300 px-2 py-1 rounded-full text-xs">
            <%= @merchant.category&.name || "Uncategorized" %>
          </span>
          <span class="mx-2">•</span>
          <span class="text-gray-600 dark:text-gray-400">
            <%= @merchant.city %>, <%= @merchant.region %>
          </span>
        </div>
      </div>

      <!-- Quick Action Buttons -->
      <div class="flex mt-4 md:mt-0 space-x-2">
        <a href="tel:<%= @merchant.phone %>" class="px-4 py-2 bg-primary-600 hover:bg-primary-700 text-white rounded-lg flex items-center shadow-sm transition-colors duration-200">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call
        </a>
        <a href="mailto:<%= @merchant.email %>" class="px-4 py-2 bg-white dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-800 dark:text-white border border-gray-300 dark:border-gray-700 rounded-lg flex items-center shadow-sm transition-colors duration-200">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          Email
        </a>
      </div>
    </div>

    <!-- Status Indicators -->
    <div class="mt-4 flex flex-wrap gap-2">
      <% if @merchant.active? %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-300">
          Active
        </span>
      <% else %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-300">
          Inactive
        </span>
      <% end %>
      
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-300">
        <%= @merchant.verification_status.titleize %>
      </span>
      
      <% if @merchant.featured? %>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-300">
          Featured
        </span>
      <% end %>
      
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-300">
        <%= @merchant.subscription_level.titleize %>
      </span>
    </div>

    <!-- Announcement Banner (if available) -->
    <% if @merchant.announcement.present? %>
      <div class="mt-6 p-4 bg-yellow-50 dark:bg-yellow-900/50 border border-yellow-200 dark:border-yellow-800/50 rounded-lg">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-yellow-600 dark:text-yellow-500" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M18 3a1 1 0 00-1.447-.894L8.763 6H5a3 3 0 000 6h.28l1.771 5.316A1 1 0 008 18h1a1 1 0 001-1v-4.382l6.553 3.276A1 1 0 0018 15V3z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm text-yellow-800 dark:text-yellow-200">
              <%= @merchant.announcement.content %>
            </p>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Merchant Information Tabs -->
    <div class="mt-6" data-controller="tabs">
      <div class="border-b border-gray-200 dark:border-gray-800">
        <nav class="flex -mb-px space-x-6 overflow-x-auto hide-scrollbar" aria-label="Tabs">
          <button class="whitespace-nowrap py-3 px-1 border-b-2 border-primary-600 text-primary-600 dark:text-primary-400 dark:border-primary-400 font-medium text-sm" data-tabs-target="tab" data-action="click->tabs#change" data-id="overview">
            Overview
          </button>
          <button class="whitespace-nowrap py-3 px-1 border-b-2 border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 font-medium text-sm" data-tabs-target="tab" data-action="click->tabs#change" data-id="products">
            Products
          </button>
          <button class="whitespace-nowrap py-3 px-1 border-b-2 border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 font-medium text-sm" data-tabs-target="tab" data-action="click->tabs#change" data-id="reviews">
            Reviews
          </button>
          <button class="whitespace-nowrap py-3 px-1 border-b-2 border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 font-medium text-sm" data-tabs-target="tab" data-action="click->tabs#change" data-id="orders">
            Orders
          </button>
        </nav>
      </div>

      <!-- Overview Tab Panel -->
      <div class="py-6" data-tabs-target="panel" data-id="overview">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
          <!-- Main Details -->
          <div class="lg:col-span-2 space-y-6">
            <!-- Description -->
            <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm">
              <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Description</h3>
              <div class="text-gray-700 dark:text-gray-300">
                <%= simple_format(@merchant.description) %>
              </div>
            </div>
            
            <!-- Business Details -->
            <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm">
              <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Business Details</h3>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <h4 class="text-sm font-medium text-gray-900 dark:text-white">Business Type</h4>
                  <p class="text-gray-700 dark:text-gray-300"><%= @merchant.business_type&.titleize || "Not specified" %></p>
                </div>
                
                <div>
                  <h4 class="text-sm font-medium text-gray-900 dark:text-white">Established</h4>
                  <p class="text-gray-700 dark:text-gray-300"><%= @merchant.year_established || "Not specified" %></p>
                </div>
                
                <div>
                  <h4 class="text-sm font-medium text-gray-900 dark:text-white">Registration Number</h4>
                  <p class="text-gray-700 dark:text-gray-300"><%= @merchant.registration_number || "Not specified" %></p>
                </div>
                
                <div>
                  <h4 class="text-sm font-medium text-gray-900 dark:text-white">Employees</h4>
                  <p class="text-gray-700 dark:text-gray-300"><%= @merchant.employee_count || "Not specified" %></p>
                </div>
              </div>
            </div>
            
            <!-- Policies -->
            <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm">
              <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Policies</h3>
              <div class="space-y-4">
                <div>
                  <h4 class="text-sm font-medium text-gray-900 dark:text-white">Return Policy</h4>
                  <p class="text-gray-700 dark:text-gray-300"><%= @merchant.return_policy || "No return policy specified" %></p>
                </div>
                
                <div>
                  <h4 class="text-sm font-medium text-gray-900 dark:text-white">Shipping Policy</h4>
                  <p class="text-gray-700 dark:text-gray-300"><%= @merchant.shipping_policy || "No shipping policy specified" %></p>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Sidebar -->
          <div class="space-y-6">
            <!-- Contact Information -->
            <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-sm">
              <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-4">Contact Information</h3>
              <div class="space-y-3">
                <div class="flex items-start">
                  <div class="flex-shrink-0 mt-0.5">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 dark:text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                  </div>
                  <div class="ml-3">
                    <h4 class="text-sm font-medium text-gray-900 dark:text-white">Phone</h4>
                    <p class="mt-1 text-sm text-gray-700 dark:text-gray-300">
                      <a href="tel:<%= @merchant.phone %>" class="hover:text-primary-600 dark:hover:text-primary-400">
                        <%= @merchant.phone %>
                      </a>
                    </p>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <div class="flex-shrink-0 mt-0.5">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 dark:text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div class="ml-3">
                    <h4 class="text-sm font-medium text-gray-900 dark:text-white">Email</h4>
                    <p class="mt-1 text-sm text-gray-700 dark:text-gray-300">
                      <a href="mailto:<%= @merchant.email %>" class="hover:text-primary-600 dark:hover:text-primary-400">
                        <%= @merchant.email %>
                      </a>
                    </p>
                  </div>
                </div>
                
                <% if @merchant.website.present? %>
                  <div class="flex items-start">
                    <div class="flex-shrink-0 mt-0.5">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 dark:text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                      </svg>
                    </div>
                    <div class="ml-3">
                      <h4 class="text-sm font-medium text-gray-900 dark:text-white">Website</h4>
                      <p class="mt-1 text-sm text-gray-700 dark:text-gray-300">
                        <a href="<%= @merchant.website %>" target="_blank" rel="noopener noreferrer" class="hover:text-primary-600 dark:hover:text-primary-400">
                          <%= @merchant.website %>
                        </a>
                      </p>
                    </div>
                  </div>
                <% end %>
                
                <% if @merchant.contact_person.present? %>
                  <div class="flex items-start">
                    <div class="flex-shrink-0 mt-0.5">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 dark:text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                      </svg>
                    </div>
                    <div class="ml-3">
                      <h4 class="text-sm font-medium text-gray-900 dark:text-white">Contact Person</h4>
                      <p class="mt-1 text-sm text-gray-700 dark:text-gray-300">
                        <%= @merchant.contact_person %>
                      </p>
                    </div>
                  </div>
                <% end %>
              </div>
              
              <!-- Social Media Links -->
              <% if @merchant.social_media.present? && @merchant.social_media.values.any?(&:present?) %>
                <div class="mt-6">
                  <h4 class="text-sm font-medium text-gray-900 dark:text-white mb-2">Connect With Us</h4>
                  <div class="flex space-x-4">
                    <% if @merchant.social_media["facebook"].present? %>
                      <a href="https://facebook.com/<%= @merchant.social_media["facebook"] %>" target="_blank" rel="noopener noreferrer" class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                          <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
                        </svg>
                      </a>
                    <% end %>
                    
                    <% if @merchant.social_media["instagram"].present? %>
                      <a href="https://instagram.com/<%= @merchant.social_media["instagram"] %>" target="_blank" rel="noopener noreferrer" class="text-pink-600 dark:text-pink-400 hover:text-pink-800 dark:hover:text-pink-300">
                        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
