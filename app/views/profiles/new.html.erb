<div class="min-h-screen bg-gray-50 py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-3xl mx-auto">
      <!-- Header -->
      <div class="text-center mb-10">
        <h1 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
          Create Your Profile
        </h1>
        <p class="mt-4 text-lg text-gray-500">
          Let's set up your Supper Ghana profile and help you connect with others.
        </p>
        <div class="mt-6 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-full shadow-sm text-white bg-indigo-100 text-indigo-800">
          <span class="flex h-2 w-2 mr-2">
            <span class="animate-ping absolute inline-flex h-2 w-2 rounded-full bg-indigo-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-indigo-500"></span>
          </span>
          Step 2 of 3: Profile Information
        </div>
      </div>

      <!-- Progress Bar -->
      <div class="w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700 mb-10">
        <div class="bg-indigo-600 h-2.5 rounded-full" style="width: 66%"></div>
      </div>

      <!-- Profile Form -->
      <div class="bg-white shadow-sm rounded-lg overflow-hidden">
        <%= render 'form', profile: @profile %>
      </div>

      <!-- Help Text -->
      <div class="mt-10 text-center">
        <p class="text-sm text-gray-500">
          Having trouble? <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500">Contact our support team</a> for assistance.
        </p>
      </div>
    </div>
  </div>
</div>