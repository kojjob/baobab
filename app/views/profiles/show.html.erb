<div class="bg-white" data-controller="profile-tabs profile-actions">
  <!-- Cover Image Section -->
  <div class="relative h-64 md:h-80 bg-gradient-to-r from-blue-600 to-indigo-700 overflow-hidden">
    <% if @profile.profile_cover_image.present? %>
      <%= image_tag @profile.profile_cover_image, class: "absolute inset-0 w-full h-full object-cover" %>
    <% else %>
      <!-- Decorative Pattern Background if no cover image -->
      <div class="absolute inset-0 opacity-20">
        <div class="absolute inset-0" style="background-image: url('data:image/svg+xml;base64,'); background-size: 30px 30px;"></div>
      </div>
    <% end %>
  </div>

  <!-- Profile Header Section -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 -mt-32 relative z-10">
    <div class="bg-white rounded-xl shadow-md overflow-hidden mb-8">
      <!-- Profile Header Content -->
      <div class="p-6 sm:p-8">
        <div class="sm:flex sm:items-center sm:justify-between">
          <div class="sm:flex sm:items-center">
            <!-- Profile Image -->
            <div class="relative flex-shrink-0 mb-4 sm:mb-0">
              <% if @profile.user.profile_image.present? %>
                <%= image_tag @profile.user.profile_image, class: "h-28 w-28 rounded-full border-4 border-white shadow-md object-cover" %>
              <% else %>
                <div class="h-28 w-28 rounded-full border-4 border-white shadow-md bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center">
                  <span class="text-3xl font-bold text-white"><%= @profile.first_name.first.upcase if @profile.first_name.present? %><%= @profile.last_name.first.upcase if @profile.last_name.present? %></span>
                </div>
              <% end %>
              
              <!-- Verification Badge (if verified) -->
              <% if @profile.profile_verification_status.present? && @profile.profile_verification_status >= 1 %>
                <div class="absolute bottom-1 right-1 h-6 w-6 bg-blue-500 rounded-full border-2 border-white flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-3.5 h-3.5 text-white">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </div>
              <% end %>
            </div>
            
            <!-- Profile Info -->
            <div class="ml-0 sm:ml-6">
              <div class="flex items-center">
                <h1 class="text-2xl font-bold text-gray-900">
                  <%= @profile.first_name %> <%= @profile.last_name %>
                </h1>
                
                <!-- Membership Badge -->
                <% if @profile.user.membership_level.present? && @profile.user.membership_level != 'free' %>
                  <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                    <%= @profile.user.membership_level.capitalize %>
                  </span>
                <% end %>
              </div>
              
              <p class="text-gray-600 mt-1">@<%= @profile.profile_username %></p>
              
              <!-- Location & Last Seen -->
              <div class="mt-2 flex flex-wrap items-center text-sm text-gray-500">
                <% if @profile.profile_location.present? %>
                  <div class="flex items-center mr-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <span><%= @profile.profile_location %></span>
                  </div>
                <% end %>
                
                <% if @profile.profile_last_seen_at.present? %>
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span>Last seen <%= time_ago_in_words(@profile.profile_last_seen_at) %> ago</span>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
          
          <!-- Profile Actions -->
          <div class="mt-6 sm:mt-0 flex flex-wrap gap-2">
            <% if current_user && current_user.id == @profile.user_id %>
              <!-- Edit Profile Button -->
              <%= link_to edit_profile_path(@profile), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
                </svg>
                Edit Profile
              <% end %>
            <% else %>
              <!-- Follow/Unfollow Button -->
              <button 
                data-action="profile-actions#toggleFollow"
                data-profile-actions-target="followButton"
                data-profile-id="<%= @profile.id %>"
                data-following="false"
                class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                </svg>
                Follow
              </button>
              
              <!-- Message Button -->
              <button 
                data-action="profile-actions#openMessageModal"
                class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
                </svg>
                Message
              </button>
            <% end %>
            
            <!-- Share Button -->
            <button 
              data-action="profile-actions#shareProfile"
              class="inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
              <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
              </svg>
              Share
            </button>
          </div>
        </div>
        
        <!-- Profile Completion Bar (visible only to profile owner) -->
        <% if current_user && current_user.id == @profile.user_id && @profile.profile_completion && @profile.profile_completion < 100 %>
          <div class="mt-4 bg-gray-100 rounded-full overflow-hidden">
            <div class="h-2 bg-indigo-600 rounded-full" style="width: <%= @profile.profile_completion %>%"></div>
          </div>
          <p class="mt-1 text-xs text-gray-500">Profile <%= @profile.profile_completion %>% complete - <%= link_to "Complete your profile", edit_profile_path(@profile), class: "text-indigo-600 hover:text-indigo-500" %></p>
        <% end %>
      </div>
      
      <!-- Profile Navigation Tabs -->
      <div class="border-t border-gray-200">
        <nav class="flex divide-x divide-gray-200">
          <button 
            class="text-gray-500 group relative min-w-0 flex-1 overflow-hidden py-4 px-4 text-sm font-medium text-center hover:bg-gray-50 hover:text-gray-700 focus:z-10 active"
            data-profile-tabs-target="tab"
            data-action="profile-tabs#showTab"
            data-tab="overview">
            <span>Overview</span>
            <span aria-hidden="true" class="bg-indigo-500 absolute inset-x-0 bottom-0 h-0.5 tab-indicator"></span>
          </button>
          
          <button 
            class="text-gray-500 group relative min-w-0 flex-1 overflow-hidden py-4 px-4 text-sm font-medium text-center hover:bg-gray-50 hover:text-gray-700 focus:z-10"
            data-profile-tabs-target="tab"
            data-action="profile-tabs#showTab"
            data-tab="posts">
            <span>Posts</span>
            <span aria-hidden="true" class="bg-transparent absolute inset-x-0 bottom-0 h-0.5 tab-indicator"></span>
          </button>
          
          <button 
            class="text-gray-500 group relative min-w-0 flex-1 overflow-hidden py-4 px-4 text-sm font-medium text-center hover:bg-gray-50 hover:text-gray-700 focus:z-10"
            data-profile-tabs-target="tab"
            data-action="profile-tabs#showTab"
            data-tab="activity">
            <span>Activity</span>
            <span aria-hidden="true" class="bg-transparent absolute inset-x-0 bottom-0 h-0.5 tab-indicator"></span>
          </button>
          
          <button 
            class="text-gray-500 group relative min-w-0 flex-1 overflow-hidden py-4 px-4 text-sm font-medium text-center hover:bg-gray-50 hover:text-gray-700 focus:z-10"
            data-profile-tabs-target="tab"
            data-action="profile-tabs#showTab"
            data-tab="connections">
            <span>Connections</span>
            <span aria-hidden="true" class="bg-transparent absolute inset-x-0 bottom-0 h-0.5 tab-indicator"></span>
          </button>
        </nav>
      </div>
    </div>
    
    <!-- Tab Content Container -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
      <!-- Overview Tab Content -->
      <turbo-frame id="profile-tab-content" class="md:col-span-2">
        <div class="bg-white rounded-xl shadow-sm overflow-hidden p-6" data-profile-tabs-target="tabContent" data-tab="overview">
          <!-- Bio Section -->
          <% if @profile.profile_bio.present? %>
            <div class="mb-8">
              <h2 class="text-lg font-medium text-gray-900 mb-3">About</h2>
              <div class="text-gray-700 prose">
                <%= simple_format(@profile.profile_bio) %>
              </div>
            </div>
          <% end %>
          
          <!-- Basic Info Section -->
          <div class="mb-8">
            <h2 class="text-lg font-medium text-gray-900 mb-3">Basic Information</h2>
            <dl class="grid grid-cols-1 sm:grid-cols-2 gap-x-4 gap-y-6">
              <% if @profile.profile_gender.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Gender</dt>
                  <dd class="mt-1 text-gray-900"><%= @profile.profile_gender %></dd>
                </div>
              <% end %>
              <% if @profile.profile_date_of_birth.present? && (current_user&.id == @profile.user_id || (@profile.profile_privacy_settings.present? && @profile.profile_privacy_settings["show_dob"] == true)) %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Date of Birth</dt>
                  <dd class="mt-1 text-gray-900"><%= @profile.profile_date_of_birth.strftime("%B %d, %Y") %></dd>
                </div>
              <% end %>
              
              <% if @profile.profile_language.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Language</dt>
                  <dd class="mt-1 text-gray-900"><%= @profile.profile_language %></dd>
                </div>
              <% end %>
              
              <% if @profile.created_at.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Joined</dt>
                  <dd class="mt-1 text-gray-900"><%= @profile.created_at.strftime("%B %Y") %></dd>
                </div>
              <% end %>
              
              <% if @profile.profile_website.present? %>
                <div class="sm:col-span-2">
                  <dt class="text-sm font-medium text-gray-500">Website</dt>
                  <dd class="mt-1 text-gray-900">
                    <a href="<%= @profile.profile_website %>" target="_blank" class="text-indigo-600 hover:text-indigo-500">
                      <%= @profile.profile_website %>
                    </a>
                  </dd>
                </div>
              <% end %>
              
              <% if @profile.profile_phone_number.present? && (current_user&.id == @profile.user_id ||(@profile.profile_privacy_settings.present? && @profile.profile_privacy_settings["phone_visibility"] == "public")) %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Phone</dt>
                  <dd class="mt-1 text-gray-900"><%= @profile.profile_phone_number %></dd>
                </div>
              <% end %>
            </dl>
          </div>
          
          <!-- Interests & Tags Section -->
          <% if @profile.profile_interests.present? || @profile.profile_tags.present? %>
            <div class="mb-8">
              <h2 class="text-lg font-medium text-gray-900 mb-3">Interests & Tags</h2>
              <div class="flex flex-wrap gap-2">
                <% if @profile.profile_interests.present? %>
                  <% @profile.profile_interests.split(',').each do |interest| %>
                    <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                      <%= interest.strip %>
                    </span>
                  <% end %>
                <% end %>
                
                <% if @profile.profile_tags.present? %>
                  <% @profile.profile_tags.split(',').each do |tag| %>
                    <span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
                      <%= tag.strip %>
                    </span>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
          
          <!-- Social Links Section -->
          <% if @profile.profile_social_links.present? && !@profile.profile_social_links.empty? %>
            <div>
              <h2 class="text-lg font-medium text-gray-900 mb-3">Connect with <%= @profile.first_name %></h2>
              <div class="flex space-x-4">
                <% if @profile.profile_social_links["twitter"].present? %>
                  <a href="<%= @profile.profile_social_links["twitter"] %>" target="_blank" class="text-gray-400 hover:text-blue-500 transition">
                    <span class="sr-only">Twitter</span>
                    <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
                    </svg>
                  </a>
                <% end %>
                
                <% if @profile.profile_social_links["facebook"].present? %>
                  <a href="<%= @profile.profile_social_links["facebook"] %>" target="_blank" class="text-gray-400 hover:text-blue-700 transition">
                    <span class="sr-only">Facebook</span>
                    <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                      <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
                    </svg>
                  </a>
                <% end %>
                
                <% if @profile.profile_social_links["instagram"].present? %>
                  <a href="<%= @profile.profile_social_links["instagram"] %>" target="_blank" class="text-gray-400 hover:text-pink-600 transition">
                    <span class="sr-only">Instagram</span>
                    <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                      <path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd" />
                    </svg>
                  </a>
                <% end %>
                
                <% if @profile.profile_social_links["linkedin"].present? %>
                  <a href="<%= @profile.profile_social_links["linkedin"] %>" target="_blank" class="text-gray-400 hover:text-blue-800 transition">
                    <span class="sr-only">LinkedIn</span>
                    <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
                    </svg>
                  </a>
                <% end %>
                
                <% if @profile.profile_social_links["youtube"].present? %>
                  <a href="<%= @profile.profile_social_links["youtube"] %>" target="_blank" class="text-gray-400 hover:text-red-600 transition">
                    <span class="sr-only">YouTube</span>
                    <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                      <path fill-rule="evenodd" d="M19.812 5.418c.861.23 1.538.907 1.768 1.768C21.998 8.746 22 12 22 12s0 3.255-.418 4.814a2.504 2.504 0 01-1.768 1.768c-1.56.419-7.814.419-7.814.419s-6.255 0-7.814-.419a2.505 2.505 0 01-1.768-1.768C2 15.255 2 12 2 12s0-3.255.417-4.814a2.507 2.507 0 011.768-1.768C5.744 5 11.998 5 11.998 5s6.255 0 7.814.418ZM15.194 12 10 15V9l5.194 3Z" clip-rule="evenodd" />
                    </svg>
                  </a>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        
        <!-- Posts Tab Content -->
        <div class="bg-white rounded-xl shadow-sm overflow-hidden p-6 hidden" data-profile-tabs-target="tabContent" data-tab="posts">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-lg font-medium text-gray-900">Posts</h2>
            
            <% if current_user && current_user.id == @profile.user_id %>
              <%= link_to new_admin_post_path, class: "inline-flex items-center px-3 py-1.5 border border-transparent text-xs font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="-ml-0.5 mr-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                </svg>
                New Post
              <% end %>
            <% end %>
          </div>
          
          <% if @posts.blank? %>
            <div class="text-center py-12 border-2 border-gray-200 border-dashed rounded-lg">
              <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900">No posts yet</h3>
              <p class="mt-1 text-sm text-gray-500">
                <%= current_user && current_user.id == @profile.user_id ? "Get started by creating a new post." : "#{@profile.first_name} hasn't published any posts yet." %>
              </p>
              <% if current_user && current_user.id == @profile.user_id %>
                <div class="mt-6">
                  <%= link_to new_admin_post_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    New Post
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="space-y-6">
              <% @posts.each do |post| %>
                <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
                  <% if post.featured_image.present? %>
                    <div class="h-48 overflow-hidden">
                      <%= image_tag post.featured_image, class: "w-full h-full object-cover" %>
                    </div>
                  <% end %>
                  
                  <div class="p-4 sm:p-6">
                    <div class="flex items-center mb-2">
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                        <%= post.category.name %>
                      </span>
                      <span class="ml-3 text-xs text-gray-500">
                        <%= post.published_at.strftime("%B %d, %Y") %>
                      </span>
                    </div>
                    
                    <h3 class="text-lg font-bold text-gray-900 mb-2">
                      <%= link_to post.title, post_path(post), class: "hover:text-indigo-600" %>
                    </h3>
                    
                    <p class="text-gray-600 mb-4 line-clamp-3">
                      <%= post.excerpt %>
                    </p>
                    
                    <div class="flex items-center justify-between">
                      <div class="flex items-center space-x-4 text-sm text-gray-500">
                        <div class="flex items-center">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                          </svg>
                          <%= post.post_views.count %>
                        </div>
                        
                        <div class="flex items-center">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
                          </svg>
                          <%= post.comments.count %>
                        </div>
                      </div>
                      
                      <%= link_to "Read more", post_path(post), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
                    </div>
                  </div>
                </div>
              <% end %>
              
              <!-- Pagination -->
              <% if @posts.total_pages > 1 %>
                <nav class="border-t border-gray-200 flex items-center justify-between px-4 sm:px-0">
                  <div class="w-0 flex-1 flex">
                    <%= link_to_if @posts.prev_page, profile_path(@profile, page: @posts.prev_page, tab: 'posts'), class: "border-t-2 border-transparent pt-4 pr-1 inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" do %>
                      <svg class="mr-3 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                      </svg>
                      Previous
                    <% end %>
                  </div>
                  <div class="hidden md:flex">
                    <% (1..@posts.total_pages).each do |page| %>
                      <% if page == @posts.current_page %>
                        <span class="border-indigo-500 text-indigo-600 border-t-2 pt-4 px-4 inline-flex items-center text-sm font-medium">
                          <%= page %>
                        </span>
                      <% else %>
                        <%= link_to page, profile_path(@profile, page: page, tab: 'posts'), class: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 border-t-2 pt-4 px-4 inline-flex items-center text-sm font-medium" %>
                      <% end %>
                    <% end %>
                  </div>
                  <div class="w-0 flex-1 flex justify-end">
                    <%= link_to_if @posts.next_page, profile_path(@profile, page: @posts.next_page, tab: 'posts'), class: "border-t-2 border-transparent pt-4 pl-1 inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700 hover:border-gray-300" do %>
                      Next
                      <svg class="ml-3 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                      </svg>
                    <% end %>
                  </div>
                </nav>
              <% end %>
            </div>
          <% end %>
        </div>
        
        <!-- Activity Tab Content -->
        <div class="bg-white rounded-xl shadow-sm overflow-hidden p-6 hidden" data-profile-tabs-target="tabContent" data-tab="activity">
          <h2 class="text-lg font-medium text-gray-900 mb-6">Recent Activity</h2>
          
          <div class="relative">
            <div class="absolute inset-0 flex items-center" aria-hidden="true">
              <div class="w-0.5 h-full bg-gray-200 mx-auto"></div>
            </div>
            
            <div class="relative space-y-8">
              <% if @activities.blank? %>
                <div class="text-center py-12">
                  <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <h3 class="mt-2 text-sm font-medium text-gray-900">No recent activity</h3>
                  <p class="mt-1 text-sm text-gray-500">
                    <%= @profile.first_name %> has been quiet lately.
                  </p>
                </div>
              <% else %>
                <% @activities.each do |activity| %>
                  <div class="relative flex items-start">
                    <div class="flex items-center h-10">
                      <div class="relative z-10 w-10 h-10 flex items-center justify-center bg-white border-2 border-indigo-500 rounded-full">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-indigo-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                        </svg>
                      </div>
                    </div>
                    <div class="min-w-0 flex-1 ml-4">
                      <div class="text-sm text-gray-500 mb-1">
                        <%= activity.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                      </div>
                      <div class="bg-gray-50 p-4 rounded-lg border border-gray-200">
                        <h3 class="text-base font-medium text-gray-900 mb-1">
                          Published a new post
                        </h3>
                        <p class="text-gray-600 mb-2"><%= activity.title %></p>
                        <%= link_to "View post", post_path(activity), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
        
        <!-- Connections Tab Content -->
        <div class="bg-white rounded-xl shadow-sm overflow-hidden p-6 hidden" data-profile-tabs-target="tabContent" data-tab="connections">
          <div class="mb-8">
            <h2 class="text-lg font-medium text-gray-900 mb-6">Connections</h2>
            
            <!-- Tabs for connections -->
            <div class="border-b border-gray-200 mb-6">
              <nav class="-mb-px flex space-x-8" data-controller="connection-tabs">
                <button class="border-indigo-500 text-indigo-600 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm"
                        data-connection-tabs-target="tab"
                        data-action="connection-tabs#showTab"
                        data-tab="followers">
                  Followers
                </button>
                <button class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm"
                        data-connection-tabs-target="tab"
                        data-action="connection-tabs#showTab"
                        data-tab="following">
                  Following
                </button>
              </nav>
            </div>
            
            <!-- Followers Tab -->
            <div data-connection-tabs-target="content" data-tab="followers">
              <div class="text-center py-12 border-2 border-gray-200 border-dashed rounded-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">No followers yet</h3>
                <p class="mt-1 text-sm text-gray-500">
                  <%= current_user && current_user.id == @profile.user_id ? "When people follow you, they'll appear here." : "#{@profile.first_name} doesn't have any followers yet." %>
                </p>
              </div>
            </div>
            
            <!-- Following Tab -->
            <div class="hidden" data-connection-tabs-target="content" data-tab="following">
              <div class="text-center py-12 border-2 border-gray-200 border-dashed rounded-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656.126-1.283.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656-.126-1.283-.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                <h3 class="mt-2 text-sm font-medium text-gray-900">Not following anyone yet</h3>
                <p class="mt-1 text-sm text-gray-500">
                  <%= current_user && current_user.id == @profile.user_id ? "When you follow people, they'll appear here." : "#{@profile.first_name} isn't following anyone yet." %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </turbo-frame>
      
      <!-- Sidebar -->
      <div class="md:col-span-1 space-y-6">
        <!-- Profile Stats Card -->
        <div class="bg-white rounded-xl shadow-sm overflow-hidden p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Profile Stats</h3>
          <dl class="space-y-4">
            <div class="flex justify-between">
              <dt class="text-sm font-medium text-gray-500">Posts</dt>
              <dd class="text-sm font-medium text-gray-900"><%= @total_posts || 0 %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-sm font-medium text-gray-500">Profile Views</dt>
              <dd class="text-sm font-medium text-gray-900"><%= @profile.profile_views_count || 0 %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-sm font-medium text-gray-500">Followers</dt>
              <dd class="text-sm font-medium text-gray-900">0</dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-sm font-medium text-gray-500">Following</dt>
              <dd class="text-sm font-medium text-gray-900">0</dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-sm font-medium text-gray-500">Comments</dt>
              <dd class="text-sm font-medium text-gray-900"><%= @total_comments || 0 %></dd>
            </div>
            <div class="flex justify-between">
              <dt class="text-sm font-medium text-gray-500">Joined</dt>
              <dd class="text-sm font-medium text-gray-900"><%= time_ago_in_words(@profile.created_at) %> ago</dd>
            </div>
          </dl>
        </div>
        
        <!-- Similar Profiles -->
        <div class="bg-white rounded-xl shadow-sm overflow-hidden p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Similar Profiles</h3>
          
          <% if @similar_profiles.blank? %>
            <p class="text-gray-500 text-sm">No similar profiles found.</p>
          <% else %>
            <div class="space-y-4">
              <% @similar_profiles.each do |profile| %>
                <%= link_to profile_path(profile), class: "flex items-center p-2 -m-2 rounded hover:bg-gray-50" do %>
                  <% if profile.user.profile_image.present? %>
                    <%= image_tag profile.user.profile_image, class: "h-10 w-10 rounded-full object-cover" %>
                  <% else %>
                    <div class="h-10 w-10 rounded-full bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center">
                      <span class="text-sm font-bold text-white"><%= profile.first_name.first.upcase if profile.first_name.present? %><%= profile.last_name.first.upcase if profile.last_name.present? %></span>
                    </div>
                  <% end %>
                  
                  <div class="ml-3">
                    <p class="text-sm font-medium text-gray-900"><%= profile.first_name %> <%= profile.last_name %></p>
                    <p class="text-xs text-gray-500">
                      <% if profile.profile_location.present? %>
                        <%= profile.profile_location %>
                      <% else %>
                        @<%= profile.profile_username %>
                      <% end %>
                    </p>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
        
        <!-- Report Profile Card (only visible if not the profile owner) -->
        <% if current_user && current_user.id != @profile.user_id %>
          <div class="bg-white rounded-xl shadow-sm overflow-hidden p-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Report Profile</h3>
            <p class="text-sm text-gray-500 mb-4">
              If you believe this profile violates our community guidelines, please let us know.
            </p>
            <button 
              data-action="profile-actions#openReportModal"
              class="w-full inline-flex items-center justify-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
              <svg xmlns="http://www.w3.org/2000/svg" class="-ml-1 mr-2 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
              Report Profile
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Message Modal -->
<div class="hidden fixed z-10 inset-0 overflow-y-auto" data-profile-actions-target="messageModal">
  <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" data-action="click->profile-actions#closeMessageModal"></div>

