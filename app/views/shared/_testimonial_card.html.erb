<%# _testimonial_card.html.erb - Testimonial Card Component %>
<div class="testimonial-slide w-full md:w-1/2 lg:w-1/3 flex-shrink-0 px-4">
  <div class="bg-white dark:bg-gray-800 p-6 md:p-8 rounded-2xl shadow-lg h-full flex flex-col">
    <div class="flex items-center mb-6">
      <div class="mr-4 relative">
        <div class="w-16 h-16 rounded-xl bg-gradient-to-br <%= gradient %> dark:<%= gradient.gsub(/from-(\w+)-\d+/, 'from-\1-600').gsub(/to-(\w+)-\d+/, 'to-\1-500') %>"></div>
        <div class="absolute inset-0 flex items-center justify-center font-bold text-white text-xl"><%= initials %></div>
      </div>
      <div>
        <h4 class="text-lg font-bold text-gray-900 dark:text-white"><%= name %></h4>
        <p class="text-sm text-gray-500 dark:text-gray-400"><%= role %></p>
      </div>
    </div>
    <div class="mb-4">
      <div class="flex text-yellow-400">
        <%= render partial: 'shared/star_rating', locals: { count: 5 } %>
      </div>
    </div>
    <p class="text-gray-600 dark:text-gray-300 mb-4 flex-grow">
      "<%= quote %>"
    </p>
    <div class="flex items-center text-sm text-green-500 dark:text-green-400 mt-2">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
      </svg>
      <span>Verified Customer</span>
    </div>
  </div>
</div>